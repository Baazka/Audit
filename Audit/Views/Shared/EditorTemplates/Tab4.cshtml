@model Audit.Models.Tab4
@{
    Layout = null;
}

@if (Model.MD_CODE == "112" || Model.MD_CODE == "113")
{
    @Html.HiddenFor(x => x.MD_CODE)
    @Html.HiddenFor(x => x.MD_LAWS_NUM)
    @Html.HiddenFor(x => x.MD_NAME)
    @Html.HiddenFor(x => x.MD_TIME)
    @Html.HiddenFor(x => x.Data2020)
    <tr>
        <td style="vertical-align:middle;">@Html.DisplayFor(x => x.MD_NAME)</td>
        <td style="vertical-align:middle;">@Html.TextAreaFor(x => x.Data02, new { @style = "width: 100%;" })</td>
        <td style="vertical-align:middle;">@Html.DisplayFor(x => x.Data2020)</td>
    </tr>
}
else
{
    @Html.HiddenFor(x => x.MD_CODE)
    @Html.HiddenFor(x => x.MD_LAWS_NUM)
    @Html.HiddenFor(x => x.MD_NAME)
    @Html.HiddenFor(x => x.Data2020)
    <tr>
        <td style="vertical-align:middle;">@Html.DisplayFor(x => x.MD_NAME)</td>
        <td>
            @Html.DropDownListFor(model => model.Data01, new SelectList(
                        new List<Object>{
                           new { value = 0 , text = "Үгүй" },
                           new { value = 1 , text = "Тийм" }
                        }, "value", "text"), new { @class = "form-control", @style = "font-size:12px;" })
        </td>
        <td style="vertical-align:middle;">@Html.DisplayFor(x => x.Data2020)</td>
    </tr>
}