{
    <tr>
        Төсөл бүртгэгдээгүй байна.
    </tr>
}
else
{
    @Html.HiddenFor(x => x.PROJECT_NAME)
    @Html.HiddenFor(x => x.PROJECT_NUMBER)
    @Html.HiddenFor(x => x.PROJECT_START_DATE)
    @Html.HiddenFor(x => x.PROJECT_END_DATE)
