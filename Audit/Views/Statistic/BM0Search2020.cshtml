@model List<Audit.Models.BM0Search2020>
@{
    int counter = 0;
}
<div id="BM0List2020Model" class="modal fade bs-example-modal-lg modal-lvl1" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-scrollable modal-lg" style="max-width:90%;margin: 0 auto;">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title" id="exampleModalLabel">2020 оноос сонгох</h6>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true" style="color:#fff;">x</span></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <table id="bm0list2020" class="table table-sm table-bordered table-hover" style="width:100%">
                            <thead>
                                <tr class="text-center table-header-footer">
                                    <td>№</td>
                                    <td>Төрийн аудитын байгууллага</td>
                                    <td>Аудитын он</td>
                                    <td>Аудитын төрөл</td>
                                    <td>Сэдвийн үндэслэл</td>
                                    <td>Код</td>
                                    <td>Нэр</td>
                                    <td>Дугаар</td>
                                    <td>Огноо</td>
                                    <td></td>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count > 0)
                                {
                                    foreach (var item in Model)
                                    {
                                        counter++;
                                        <tr>
                                            <td>@counter</td>
                                            <td>@item.DEPARTMENT_NAME</td>
                                            <td>@item.YEAR_LABEL</td>
                                            <td>@item.AUDIT_TYPE_NAME</td>
                                            <td>@item.TOPIC_TYPE_NAME</td>
                                            <td>@item.TOPIC_CODE</td>
                                            <td>@item.TOPIC_NAME</td>
                                            <td>@item.ORDER_NO</td>
                                            <td>@item.ORDER_DATE</td>
                                            <td><a onclick="Choose2020('@item.DEPARTMENT_NAME', '@item.YEAR_LABEL', '@item.AUDIT_TYPE', '@item.AUDIT_TYPE_NAME', '@item.TOPIC_TYPE', '@item.TOPIC_TYPE_NAME', '@item.TOPIC_CODE', '@item.TOPIC_NAME', '@item.ORDER_NO', '@item.ORDER_DATE', '@item.AUDIT_BUDGET_TYPE','@item.BUDGET_TYPE_NAME')" style="cursor:pointer; text-decoration:underline;">Сонгох</a></td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $('#bm0list2020').DataTable({
        "bLengthChange": false,
        language: datatables.language
    });
</script>
