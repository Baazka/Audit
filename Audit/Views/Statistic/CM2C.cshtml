@section scripts{
    <script>
        $(document).ready(function () {
            
            setTimeout(function () { cm2cListInit(); }, 1000);
        });

        function cm2cListInit(pagelength = -1) {
            var count = 0;
            CM2C.table = $("#CM2C").DataTable({
                "serverSide": true,
                "processing": true,
                "ajax": {
                    url: "/api/service/cm2list",
                    type: 'POST',
                    data: function (data) {
                        data.DeparmentID = $('#DeparmentID').val();
                        data.PeriodID = $('#PeriodID').val();
                        data.Type = 3;
                        count = 0;
                        return data;
                    }
                },
                createdRow: function (row, data, dataIndex) {
                    $(row).attr('data-id', data.ID);
                },
                "columns": [
                    { "data": "DEPARTMENT_NAME", "name": "DEPARTMENT_NAME" },
                    {
                        "data": "DECISION_TYPE", "sortable": false, "class": 'text-center',
                    },
                    { "data": "DECISION_TYPE", "name": "DECISION_TYPE" },
                    { "data": "BUDGET_TYPE_NAME", "name": "BUDGET_TYPE_NAME" },
                    { "data": "C1_COUNT", "name": "C1_COUNT", "class": "text-right",},
                    { "data": "C1_AMOUNT", "name": "C1_AMOUNT", "class": "text-right",},
                    { "data": "CURRENT_COUNT", "name": "CURRENT_COUNT", "class": "text-right",},
                    { "data": "CURRENT_AMOUNT", "name": "CURRENT_AMOUNT", "class": "text-right",},
                    { "data": "PREV_COUNT", "name": "PREV_COUNT", "class": "text-right",},
                    { "data": "PREV_AMOUNT", "name": "PREV_AMOUNT", "class": "text-right",},
                    { "data": "CY_COUNT", "name": "CY_COUNT", "class": "text-right",},
                    { "data": "CY_AMOUNT", "name": "CY_AMOUNT", "class": "text-right",},
                    { "data": "TOTAL_COUNT", "name": "TOTAL_COUNT", "class": "text-right",},
                    { "data": "TOTAL_AMOUNT", "name": "TOTAL_AMOUNT", "class": "text-right",},
                    { "data": "COMP_STATE_COUNT", "name": "COMP_STATE_COUNT", "class": "text-right",},
                    { "data": "COMP_STATE_AMOUNT", "name": "COMP_STATE_AMOUNT", "class": "text-right",},
                    { "data": "COMP_LOCAL_COUNT", "name": "COMP_LOCAL_COUNT", "class": "text-right",},
                    { "data": "COMP_LOCAL_AMOUNT", "name": "COMP_LOCAL_AMOUNT", "class": "text-right",},
                    { "data": "COMP_ORG_COUNT", "name": "COMP_ORG_COUNT", "class": "text-right",},
                    { "data": "COMP_ORG_AMOUNT", "name": "COMP_ORG_AMOUNT", "class": "text-right",},
                    { "data": "COMP_OTHER_COUNT", "name": "COMP_OTHER_COUNT", "class": "text-right",},
                    { "data": "COMP_OTHER_AMOUNT", "name": "COMP_OTHER_AMOUNT", "class": "text-right",},
                    { "data": "STATISTIC_COUNT", "name": "STATISTIC_COUNT", "class": "text-right",},
                    { "data": "STATISTIC_AMOUNT", "name": "STATISTIC_AMOUNT", "class": "text-right",},
                    { "data": "C2_COUNT", "name": "C2_COUNT", "class": "text-right",},
                    { "data": "C2_AMOUNT", "name": "C2_AMOUNT", "class": "text-right",},
                    { "data": "C2_NONEXPIRED_COUNT", "name": "C2_NONEXPIRED_COUNT", "class": "text-right",},
                    { "data": "C2_NONEXPIRED_AMOUNT", "name": "C2_NONEXPIRED_AMOUNT", "class": "text-right",},
                    { "data": "C2_EXPIRED_COUNT", "name": "C2_EXPIRED_COUNT", "class": "text-right",},
                    { "data": "C2_EXPIRED_AMOUNT", "name": "C2_EXPIRED_AMOUNT", "class": "text-right",},
                ],
                scrollX: true,
                scrollY: 392,
                scrollCollapse: true,
                autoWidth: true,
                "destroy": true,
                "scrollCollapse": true,
                "paging": true,
                "pageLength": pagelength,
                "lengthMenu": [[10, 25, 50], [10, 25, 50]],
                "filter": true,
                "info": true,
                "stateSave": false,
                "bAutoWidth": false,
                lengthChange: true,
                "language": datatables.language,
                "createdRow": function (row, data, index) {
                    if (data !== undefined) {
                        if (data.BUDGET_TYPE_NAME === "Дүн") {
                            $(row).children('td').each((index, td) => {
                                if (index === 3) {
                                    $('td', row).eq(3).addClass('font-weight-bold');

                                }
                                if (index !== 30 && index !== 2)
                                    $('td', row).eq(index).addClass('tableBackroundDun');
                            });
                        }
                    }
                },
                "drawCallback": function (settings) {
                    var api = this.api();
                    var rows = api.rows({ page: 'current' }).nodes();



                    idx2 = 2

                    last = null;
                    tr = null;
                    ltd = null;
                    api.column(idx2, { page: 'current' }).data().each(function (group, i) {
                        tr = $(rows[i]);
                        var td = $("td:eq(" + idx2 + ")", tr);

                        if (last !== group) {

                            td.attr("rowspan", 1);
                            td.text(group);
                            ltd = td;
                            last = group;
                            td.css("vertical-align", "middle");
                            idx2 = 2;
                        }
                        else {
                            ltd.attr("rowspan", parseInt(ltd.attr("rowspan")) + 1);
                            td.remove();

                            if (parseInt(ltd.attr("rowspan")) === 5) {
                                idx2 = 2;
                            }

                        }

                    });



                    idx1 = 1

                    last = null;
                    tr = null;
                    ltd = null;
                    api.column(idx1, { page: 'current' }).data().each(function (group, i) {
                        tr = $(rows[i]);
                        var td = $("td:eq(" + idx1 + ")", tr);

                        if (last !== group) {

                            td.attr("rowspan", 1);
                            td.text(count = count + 1);
                            ltd = td;
                            last = group;
                            td.css("vertical-align", "middle");
                            idx1 = 1;
                        }
                        else {
                            ltd.attr("rowspan", parseInt(ltd.attr("rowspan")) + 1);
                            td.remove();

                            if (parseInt(ltd.attr("rowspan")) === 5) {
                                idx1 = 1;
                            }

                        }

                    });

                    idx = 0

                    last = null;
                    tr = null;
                    ltd = null;
                    api.column(idx, { page: 'current' }).data().each(function (group, i) {
                        tr = $(rows[i]);
                        var td = $("td:eq(" + idx + ")", tr);

                        if (last !== group) {

                            td.attr("rowspan", 1);

                            td.text(group);
                            ltd = td;
                            last = group;
                            td.css("vertical-align", "middle");
                            idx = 0;
                        }
                        else {
                            ltd.attr("rowspan", parseInt(ltd.attr("rowspan")) + 1);
                            td.remove();

                            if (parseInt(ltd.attr("rowspan")) === 5) {
                                idx = 0;
                            }

                        }

                    });

                },
            });

        }
        $('#DeparmentID').change(function () {
            cm2cListInit();
        });
        $('#PeriodID').change(function () {
            cm2cListInit();
        });
        var CM2C = {
            cm2cID: null,
            table: null,
        display: function (data) {
            $("div#cm2cmodalcontainer").remove();
            $('<div/>', { id: "cm2cmodalcontainer" }).appendTo('body').append(data);

            $("#CM2CModal").modal({ show: true });
        },
        loadTemplate: function () {
            $.ajax({
                    url: "@Url.Action("CM2CAddEdit", "Statistic", new { Area = "" })",
                    type: 'GET',
                success: function (data) {
                    CM2C.display(data);
                    },
                    error: errorResponse,
                    beforeSend: function () {
                        Modal.show();
                    },
                    complete: function () {
                        Modal.hide();
                    }
                });
        },
        edit: function (id) {
            $.ajax({
                url: "@Url.Action("CM2CDetail", "Statistic", new { Area = "" })",
                type: 'POST',
                data: { id },
                success: function (data, status, xhr) {
                    CM2C.progressResponse(data, status, xhr);
                },
                error: errorResponse,
                beforeSend: function () {
                    Modal.show();
                },
                complete: function () {
                    Modal.hide();
                }
            });
        },
        delete: function (id) {
            CM2C.cm2cID = id;
            var r = confirm("Устгах уу!");
            if (r) {
                $.ajax({
                    url: "@Url.Action("CM2CDelete", "Statistic", new { Area = "" })",
                    type: 'POST',
                    data: { id },
                    success: function (data, status, xhr) {
                        CM2C.progressResponse(data, status, xhr);
                    },
                    error: errorResponse,
                    beforeSend: function () {
                        Modal.show();
                    },
                    complete: function () {
                        Modal.hide();
                    }
                });
            }
        },
        close: function () {
            $("#CM2CModal").modal("hide");
        },
        progressResponse: function (data, status, xhr) {
            var ct = xhr.getResponseHeader("content-type") || "";
            if (ct.indexOf("html") > -1) {
                CM2C.display(data);
            }
            if (ct.indexOf('json') > -1) {
                if (data.error) {
                    Message.error(data.message);
                } else {
                    $('.modal-backdrop:first').remove()
                    CM2C.close();
                    cm2cListInit();
                    Message.success(data.message);
                }
            }
        }
    }
        function exportFile(tableid, excelname,) {
            $('#exportXLSX').addClass('disabled');
            CM2C.table.destroy();
            cm2cListInit(-1);

            setTimeout(function () {
                var wb = XLSX.utils.table_to_book(document.getElementById(tableid));
                XLSX.writeFile(wb, excelname + '.xlsx');

                CM2C.table.destroy();
                cm2cListInit();
                $('#exportXLSX').removeClass('disabled');
            }, 5000
            )
        }
    </script>
}
