@using Audit.Models
@model Audit.Models.BM0VM
@{
    ViewBag.Title = "BM0";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-flex">
    <a href="@Url.Action("Index","Statistic")" class="btn btn-sm btn-light mr-2">
        <span class="icon text-gray-600">
            <i class="fas fa-arrow-left"></i>
        </span>
    </a>
    <h4>БМ-0. Төрийн аудитын газрын гүйцэтгэсэн аудитын бүртгэл</h4>
</div>
<hr class="sidebar-divider">
<form method="post" id="FilterForm">
    <div class="d-flex flex-wrap mb-2">

        <div class="form-group-sm pr-2">
            <label for="DeparmentID" class="col-form-label">Алба:</label>
            @Html.DropDownListFor(model => model.DeparmentID, Model.departments.Select(m => new SelectListItem { Text = m.DEPARTMENT_NAME, Value = m.DEPARTMENT_ID.ToString() }).ToList(), "Сонгоно уу", htmlAttributes: new { @class = "form-control form-control-sm" })
        </div>
        <div class="form-group-sm pr-2">
            <label for="PeriodID" class="col-form-label">Он:</label>
            @Html.DropDownListFor(model => model.PeriodID, Model.periods.Select(m => new SelectListItem { Text = m.PERIOD_LABEL, Value = m.ID.ToString() }).ToList(), null, htmlAttributes: new { @class = "form-control form-control-sm" })
        </div>

        <div class="form-group-sm ml-auto pr-2">
            <a href="#" class="btn btn-sm btn-secondary btn-icon-split" style="margin-top: 32px;" onclick="BM0.loadTemplate();">
                <span class="icon text-white-50">
                    <i class="fas fa-plus"></i>
                </span>
                <span class="text">Шинэ бүртгэл</span>
            </a>
        </div>


        <div class="form-group-sm pr-2">
            <a href="#" class="btn btn-sm btn-success btn-icon-split" id="exportXLSX" style="margin-top: 32px;" onclick="exportFile('BM0', 'БМ-0. Төрийн аудитын газрын гүйцэтгэсэн аудитын бүртгэл')">
                <span class="icon text-white-50">
                    <i class="fas fa-file-excel"></i>
                </span>
                <span class="text">Excel</span>
            </a>
        </div>
    </div>
</form>
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table id="BM0" class="table table-bordered datatable display" style="width:100%">
                <thead>
                    <tr>
                        <th rowspan="3" class="text-center">№</th>
                        <th colspan="13">Ерөнхий мэдээлэл</th>
                        <th colspan="4">Аудитын багийн мэдээлэл</th>
                        <th rowspan="3" class="text-center">Үйлдэл</th>
                    </tr>
                    <tr>
                        <th rowspan="2">Аудитын төрөл</th>
                        <th rowspan="2">Сэдвийн үндэслэл</th>
                        <th rowspan="2">Сэдвийн код</th>
                        <th rowspan="2">Сэдвийн нэр</th>
                        <th rowspan="2">Батлагдсан тушаалын дугаар</th>
                        <th rowspan="2">Батлагдсан огноо</th>
                        <th rowspan="2">Аудит хийсэн хэлбэр</th>
                        <th rowspan="2">Санал дүгнэлтийн төрөл</th>
                        <th rowspan="2">Төсөв захирагчийн ангилал</th>
                        <th rowspan="2">Хамрагдсан байгууллагын жагсаалт</th>
                        <th colspan="3">Ажилласан</th>
                        <th rowspan="2">Харьяа газар</th>
                        <th rowspan="2">Багийн ахлах</th>
                        <th rowspan="2">Багийн гишүүд</th>
                        <th rowspan="2">Мэдээлэл оруулсан аудитор</th>
                    </tr>
                    <tr>
                        <th>Хүн</th>
                        <th>Өдөр</th>
                        <th>Илүү цаг</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            bm0ListInit();
        });

        function bm0ListInit(pagelength = 10) {
            BM0.table = $("#BM0").DataTable({
                "serverSide": true,
                "processing": true,
                "ajax": {
                    url: "/api/service/bm0list",
                    type: 'POST',
                    data: function (data) {
                        data.DeparmentID = $('#DeparmentID').val();
                        data.PeriodID = $('#PeriodID').val();
                        return data;
                    }
                },
                createdRow: function (row, data, dataIndex) {
                    $(row).attr('data-id', data.ID);
                },
                "columns": [
                    {
                        "data": null, "sortable": false, "class": 'text-center',
                        render: function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    { "data": "AUDIT_TYPE_NAME", "name": "AUDIT_TYPE_NAME" },
                    { "data": "TOPIC_TYPE_NAME", "name": "TOPIC_TYPE_NAME" },
                    { "data": "TOPIC_CODE", "name": "TOPIC_CODE" },
                    { "data": "TOPIC_NAME", "name": "TOPIC_NAME" },
                    { "data": "ORDER_NO", "name": "ORDER_NO" },
                    { "data": "ORDER_DATE", "name": "ORDER_DATE" },
                    { "data": "FORM_TYPE_NAME", "name": "FORM_TYPE_NAME" },
                    { "data": "PROPOSAL_TYPE_NAME", "name": "PROPOSAL_TYPE_NAME" },
                    { "data": "BUDGET_TYPE_NAME", "name": "BUDGET_TYPE_NAME" },
                    { "data": "AUDIT_INCLUDED_ORG", "name": "AUDIT_INCLUDED_ORG" },
                    { "data": "WORKING_PERSON", "name": "WORKING_PERSON" },
                    { "data": "WORKING_DAY", "name": "WORKING_DAY" },
                    { "data": "WORKING_ADDITION_TIME", "name": "WORKING_ADDITION_TIME" },
                    { "data": "AUDIT_DEPARTMENT", "name": "AUDIT_DEPARTMENT" },
                    { "data": "AUDITOR_LEAD", "name": "AUDITOR_LEAD" },
                    { "data": "AUDITOR_MEMBER", "name": "AUDITOR_MEMBER" },
                    { "data": "AUDITOR_ENTRY", "name": "AUDITOR_ENTRY" },
                    {
                        "data": null, "sortable": false, "class": 'text-center',
                        render: function (data, type, row, meta) {
                            var tmp = '<div class="btn-group">';
                            var urledit = '<a href="#" class="btn btn-sm" onclick="BM0.edit(' + data.ID + ')"><i class="fa fa-edit"></i></a>';
                            var urldelete = '<a href="#" class="btn btn-sm" onclick="BM0.delete(' + data.ID + ')"><i class="fa fa-trash-alt" ></i></a>';
                            tmp += urledit;
                            tmp += urldelete;
                            tmp += "</div>";
                            return tmp;
                        }
                    }
                ],
                "destroy": true,
                "scrollCollapse": true,
                "paging": true,
                "pageLength": pagelength,
                "lengthMenu": [[10, 25, 50], [10, 25, 50]],
                "filter": true,
                "info": true,
                "stateSave": false,
                "bAutoWidth": false,
                lengthChange: true,
                "language": datatables.language
            });

        }
        $('#DeparmentID').change(function () {
            bm0ListInit();
        });
        $('#PeriodID').change(function () {
            bm0ListInit();
        });
        var BM0 = {
            bm0ID: null,
            table:null,
        display: function (data) {
            $("div#bm0modalcontainer").remove();
            $('<div/>', { id: "bm0modalcontainer" }).appendTo('body').append(data);

            $('#Bm0Modal #AUDIT_TYPE').change(function () {
                //TopicType
                if ($("#Bm0Modal #TOPIC_TYPE").children().length > 1)
                    $("#Bm0Modal #TOPIC_TYPE option:not(:first)").remove();
                var $options = $("#Bm0Modal #ddTopicTypeHidden option[value^='" + $(this).val() + ":']").clone().each(function () {
                    $(this).val($(this).val().split(':')[1]);
                });
                $("#Bm0Modal #TOPIC_TYPE").append($options);
                //FormType
                if ($("#Bm0Modal #AUDIT_FORM_TYPE").children().length > 1)
                    $("#Bm0Modal #AUDIT_FORM_TYPE option:not(:first)").remove();
                var $options = $("#Bm0Modal #ddFormTypeHidden option[value^='" + $(this).val() + ":']").clone().each(function () {
                    $(this).val($(this).val().split(':')[1]);
                });
                $("#Bm0Modal #AUDIT_FORM_TYPE").append($options);
                //ProsolType
                if ($("#Bm0Modal #AUDIT_PROPOSAL_TYPE").children().length > 1)
                    $("#Bm0Modal #AUDIT_PROPOSAL_TYPE option:not(:first)").remove();
                var $options = $("#Bm0Modal #ddProposalTypeidden option[value^='" + $(this).val() + ":']").clone().each(function () {
                    $(this).val($(this).val().split(':')[1]);
                });
                $("#Bm0Modal #AUDIT_PROPOSAL_TYPE").append($options);
                //ProsolType
                if ($("#Bm0Modal #AUDIT_BUDGET_TYPE").children().length > 1)
                    $("#Bm0Modal #AUDIT_BUDGET_TYPE option:not(:first)").remove();
                var $options = $("#Bm0Modal #ddRefBudgetTypeidden option[value^='" + $(this).val() + ":']").clone().each(function () {
                    $(this).val($(this).val().split(':')[1]);
                });
                $("#Bm0Modal #AUDIT_BUDGET_TYPE").append($options);

            });

            $("#Bm0Modal").modal({ show: true });
            },
            //displayOrgSearch: function (data) {
            //    $("div#orgsearchmodalcontainer").remove();
            //    $('<div/>', { id: "orgsearchmodalcontainer" }).appendTo('body').append(data);

            //    $("#Bm0Modal").modal({ show: true });


            //    //$("div#professiongroupcontainer").remove();
            //    //$('<div/>', { id: "professiongroupcontainer" }).appendTo('body').append(data);

            //    //$('#ProfessionGroupModel').modal({ show: true });

            //    //$("#ProfessionGroupModel .btngrouplistPopup").on('click', function () {
            //    //    Profession.professiongroupList(1);
            //    //});

            //},
        loadTemplate: function () {
            $.ajax({
                    url: "@Url.Action("BM0AddEdit", "Statistic", new { Area = "" })",
                    type: 'GET',
                    success: function (data) {
                        BM0.display(data);
                    },
                    error: errorResponse,
                    beforeSend: function () {
                        Modal.show();
                    },
                    complete: function () {
                        Modal.hide();
                    }
                });
        },
        edit: function (id) {
            $.ajax({
                url: "@Url.Action("BM0Detail", "Statistic", new { Area = "" })",
                type: 'POST',
                data: { id },
                success: function (data, status, xhr) {
                    BM0.progressResponse(data, status, xhr);
                },
                error: errorResponse,
                beforeSend: function () {
                    Modal.show();
                },
                complete: function () {
                    Modal.hide();
                }
            });
        },
        delete: function (id) {
            BM0.bm0ID = id;
            var r = confirm("Устгах уу!");
            if (r) {
                $.ajax({
                    url: "@Url.Action("BM0Delete", "Statistic", new { Area = "" })",
                    type: 'POST',
                    data: { id },
                    success: function (data, status, xhr) {
                        BM0.progressResponse(data, status, xhr);
                    },
                    error: errorResponse,
                    beforeSend: function () {
                        Modal.show();
                    },
                    complete: function () {
                        Modal.hide();
                    }
                });
            }
        },
        close: function () {
            $("#Bm0Modal").modal("hide");
        },
        progressResponse: function (data, status, xhr) {
            var ct = xhr.getResponseHeader("content-type") || "";
            if (ct.indexOf("html") > -1) {
                BM0.display(data);
            }
            if (ct.indexOf('json') > -1) {
                if (data.error) {
                    Message.error(data.message);
                } else {
                    $('.modal-backdrop:first').remove()
                    BM0.close();
                    bm0ListInit();
                    Message.success(data.message);
                }
            }
        }
    }
        function exportFile(tableid, excelname,) {
            $('#exportXLSX').addClass('disabled');
            BM0.table.destroy();
            bm0ListInit(-1);

            setTimeout(function () {
                var wb = XLSX.utils.table_to_book(document.getElementById(tableid));
                XLSX.writeFile(wb, excelname + '.xlsx');

                BM0.table.destroy();
                bm0ListInit();
                $('#exportXLSX').removeClass('disabled');
            }, 5000
            )
        }
    </script>
} 