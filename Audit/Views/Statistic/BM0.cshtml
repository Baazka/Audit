                BM0.type = type;
                $.ajax({
                    url: '@Url.Action("SystemUserModal", "Statistic", new { Area = "" })',
                    type: 'GET',
                    cache: false,
                    data: { AUDIT_ID, type },
                    success: function (data) {
                        BM0.displaySystemUserList(data);
                    },
                    error: errorResponse,
                    beforeSend: function () {
                        Modal.show();
                    },
                    complete: function () {
                        Modal.hide();
                    }
                });
            },
            loadTemplate: function () {
                $.ajax({
                    url: "@Url.Action("BM0AddEdit", "Statistic", new { Area = "" })",
