                    success: function (data) {
                        BM0.display(data);
                    },
                    error: errorResponse,
                    beforeSend: function () {
                        Modal.show();
                    },
                    complete: function () {
                        Modal.hide();
                    }
                });
            },
            edit: function () {
                if (BM0.bm0ID == null)
                    alert("Бичлэг сонгоно уу");
                else {
                    var id = BM0.bm0ID;
                    $.ajax({
                        url: "@Url.Action("BM0Detail", "Statistic", new { Area = "" })",
                        type: 'POST',
                        data: { id },
                        success: function (data, status, xhr) {
                            BM0.progressResponse(data, status, xhr);
                        },
                        error: errorResponse,
                        beforeSend: function () {
                            Modal.show();
                        },
                        complete: function () {
                            Modal.hide();
                        }
                    });
                }
            },
            delete: function () {
                if (BM0.bm0ID == null)
                    alert("Бичлэг сонгоно уу");
                else {
                    var id = BM0.bm0ID;
                    var user = BM0.rowdata.AUDITOR_ENTRY;
                    var r = confirm(user +  " аудиторын оруулсан бүртгэл байна." + "\n" + "Та устгахдаа итгэлтэй байна уу?" );
                    if (r) {
                        $.ajax({
                            url: "@Url.Action("BM0Delete", "Statistic", new { Area = "" })",
                            type: 'POST',
