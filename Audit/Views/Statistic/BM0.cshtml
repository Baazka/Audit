                });
            },
            displaySystemUserList: function (data) {
                $("div#systemuserlistmodalcontainer").remove();
                $('<div/>', { id: "systemuserlistmodalcontainer" }).appendTo('body').append(data);

                $('#Bm0Modal').modal('hide');
                $('#usermodal').modal({ show: true }).on('hidden.bs.modal', function (e) {
