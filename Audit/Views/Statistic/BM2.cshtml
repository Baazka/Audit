@section scripts{
    <script>
        $(document).ready(function () {
            bm2ListInit();
        });

        function bm2ListInit(pagelength = 10) {
            BM2.table = $("#BM2").DataTable({
                "serverSide": true,
                "processing": true,
                "ajax": {
                    url: "/api/service/bm2list",
                    type: 'POST',
                    data: function (data) {
                        data.DeparmentID = $('#DeparmentID').val();
                        data.PeriodID = $('#PeriodID').val();
                        return data;
                    }
                },
                createdRow: function (row, data, dataIndex) {
                    $(row).attr('data-id', data.ID);
                },
                "columns": [
                    {
                        "data": null, "sortable": false, "class": 'text-center',
                        render: function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    { "data": "AUDIT_YEAR", "name": "AUDIT_YEAR" },
                    { "data": "AUDIT_TYPE", "name": "AUDIT_TYPE" },
                    { "data": "AUDIT_CODE", "name": "AUDIT_CODE" },
                    { "data": "AUDIT_NAME", "name": "AUDIT_NAME" },
                    { "data": "AUDIT_BUDGET_TYPE", "name": "AUDIT_BUDGET_TYPE" },
                    { "data": "ORDER_DATE", "name": "ORDER_DATE" },
                    { "data": "ORDER_NO", "name": "ORDER_NO" },
                    { "data": "CLAIM_NO", "name": "CLAIM_NO" },
                    { "data": "CLAIM_VIOLATION_DESC", "name": "CLAIM_VIOLATION_DESC" },
                    { "data": "CLAIM_VIOLATION_TYPE", "name": "CLAIM_VIOLATION_TYPE" },
                    { "data": "CLAIM_SUBMITTED_DATE", "name": "CLAIM_SUBMITTED_DATE" },
                    { "data": "CLAIM_DELIVERY_DATE", "name": "CLAIM_DELIVERY_DATE" },
                    { "data": "CLAIM_VIOLATION_AMOUNT", "name": "CLAIM_VIOLATION_AMOUNT" },
                    { "data": "CLAIM_RCV_NAME", "name": "CLAIM_RCV_NAME" },
                    { "data": "CLAIM_RCV_ROLE", "name": "CLAIM_RCV_ROLE" },
                    { "data": "CLAIM_RCV_GIVEN_NAME", "name": "CLAIM_RCV_GIVEN_NAME" },
                    { "data": "CLAIM_RCV_ADDRESS", "name": "CLAIM_RCV_ADDRESS" },
                    { "data": "CLAIM_CONTROL_AUDITOR", "name": "CLAIM_CONTROL_AUDITOR" },
                    { "data": "COMPLETION_ORDER", "name": "COMPLETION_ORDER" },
                    { "data": "COMPLETION_AMOUNT", "name": "COMPLETION_AMOUNT" },
                    { "data": "COMPLETION_STATE_AMOUNT", "name": "COMPLETION_STATE_AMOUNT" },
                    { "data": "COMPLETION_LOCAL_AMOUNT", "name": "COMPLETION_LOCAL_AMOUNT" },
                    { "data": "COMPLETION_ORG_AMOUNT", "name": "COMPLETION_ORG_AMOUNT" },
                    { "data": "COMPLETION_OTHER_AMOUNT", "name": "COMPLETION_OTHER_AMOUNT" },
                    { "data": "REMOVED_LAW_AMOUNT", "name": "REMOVED_LAW_AMOUNT" },
                    { "data": "REMOVED_LAW_DATE", "name": "REMOVED_LAW_DATE" },
                    { "data": "REMOVED_LAW_NO", "name": "REMOVED_LAW_NO" },
                    { "data": "REMOVED_INVALID_AMOUNT", "name": "REMOVED_INVALID_AMOUNT" },
                    { "data": "REMOVED_INVALID_DATE", "name": "REMOVED_INVALID_DATE" },
                    { "data": "REMOVED_INVALID_NO", "name": "REMOVED_INVALID_NO" },
                    { "data": "CLAIM_C2_AMOUNT", "name": "CLAIM_C2_AMOUNT" },
                    { "data": "CLAIM_C2_NONEXPIRED", "name": "CLAIM_C2_NONEXPIRED" },
                    { "data": "CLAIM_C2_EXPIRED", "name": "CLAIM_C2_EXPIRED" },
                    { "data": "BENEFIT_FIN", "name": "BENEFIT_FIN" },
                    { "data": "BENEFIT_FIN_AMOUNT", "name": "BENEFIT_FIN_AMOUNT" },
                    { "data": "BENEFIT_NONFIN", "name": "BENEFIT_NONFIN" },
                    {
                        "data": null, "sortable": false, "class": 'text-center',
                        render: function (data, type, row, meta) {
                            var tmp = '<div class="btn-group">';
                            var urledit = '<a href="#" class="btn btn-sm" onclick="BM2.edit(' + data.ID + ')"><i class="fa fa-edit"></i></a>';
                            var urldelete = '<a href="#" class="btn btn-sm" onclick="BM2.delete(' + data.ID + ')"><i class="fa fa-trash-alt" ></i></a>';
                            tmp += urledit;
                            tmp += urldelete;
                            tmp += "</div>";
                            return tmp;
                        }
                    }
                ],
                "destroy": true,
                "scrollCollapse": true,
                "paging": true,
                "pageLength": pagelength,
                "lengthMenu": [[10, 25, 50], [10, 25, 50]],
                "filter": true,
                "info": true,
                "stateSave": false,
                "bAutoWidth": false,
                lengthChange: true,
                "language": datatables.language
            });

        }
        $('#DeparmentID').change(function () {
            bm2ListInit();
        });
        $('#PeriodID').change(function () {
            bm2ListInit();
        });
        var BM2 = {
            bm2ID: null,
            table:null,
        display: function (data) {
            $("div#bm2modalcontainer").remove();
            $('<div/>', { id: "bm2modalcontainer" }).appendTo('body').append(data);

            $("#Bm2Modal").modal({ show: true });
        },
        loadTemplate: function () {
            $.ajax({
                    url: "@Url.Action("BM2AddEdit", "Statistic", new { Area = "" })",
                    type: 'GET',
                    success: function (data) {
                        BM2.display(data);
                    },
                    error: errorResponse,
                    beforeSend: function () {
                        Modal.show();
                    },
                    complete: function () {
                        Modal.hide();
                    }
                });
        },
        edit: function (id) {
            $.ajax({
                url: "@Url.Action("BM2Detail", "Statistic", new { Area = "" })",
                type: 'POST',
                data: { id },
                success: function (data, status, xhr) {
                    BM2.progressResponse(data, status, xhr);
                },
                error: errorResponse,
                beforeSend: function () {
                    Modal.show();
                },
                complete: function () {
                    Modal.hide();
                }
            });
        },
        delete: function (id) {
            BM2.bm2ID = id;
            var r = confirm("Устгах уу!");
            if (r) {
                $.ajax({
                    url: "@Url.Action("BM2Delete", "Statistic", new { Area = "" })",
                    type: 'POST',
                    data: { id },
                    success: function (data, status, xhr) {
                        BM2.progressResponse(data, status, xhr);
                    },
                    error: errorResponse,
                    beforeSend: function () {
                        Modal.show();
                    },
                    complete: function () {
                        Modal.hide();
                    }
                });
            }
        },
        close: function () {
            $("#Bm2Modal").modal("hide");
        },
        progressResponse: function (data, status, xhr) {
            var ct = xhr.getResponseHeader("content-type") || "";
            if (ct.indexOf("html") > -1) {
                BM2.display(data);
            }
            if (ct.indexOf('json') > -1) {
                if (data.error) {
                    Message.error(data.message);
                } else {
                    $('.modal-backdrop:first').remove()
                    BM2.close();
                    bm2ListInit();
                    Message.success(data.message);
                }
            }
        }
    }
        function exportFile(tableid, excelname,) {
            $('#exportXLSX').addClass('disabled');
            BM2.table.destroy();
            bm2ListInit(-1);

            setTimeout(function () {
                var wb = XLSX.utils.table_to_book(document.getElementById(tableid));
                XLSX.writeFile(wb, excelname + '.xlsx');

                BM2.table.destroy();
                bm2ListInit();
                $('#exportXLSX').removeClass('disabled');
            }, 5000
            )
        }
    </script>
} 