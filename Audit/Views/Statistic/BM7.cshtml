@section scripts{
    <script>
        $(document).ready(function () {
            bm7ListInit();
        });

        function bm7ListInit() {
            var table = $("#BM7").DataTable({
                "serverSide": true,
                "processing": true,
                "ajax": {
                    url: "/api/service/bm7list",
                    type: 'POST',
                    data: function (data) {
                        data.DeparmentID = $('#DeparmentID').val();
                        data.PeriodID = $('#PeriodID').val();
                        return data;
                    }
                },
                createdRow: function (row, data, dataIndex) {
                    $(row).attr('data-id', data.ID);
                },
                "columns": [
                    {
                        "data": null, "sortable": false, "class": 'text-center',
                        render: function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    { "data": null, "name": null },
                    { "data": "AUDIT_YEAR", "name": "AUDIT_YEAR" },
                    { "data": "AUDIT_TYPE", "name": "AUDIT_TYPE" },
                    { "data": "AUDIT_CODE", "name": "AUDIT_CODE" },
                    { "data": "AUDIT_NAME", "name": "AUDIT_NAME" },
                    { "data": null, "name": null },
                    { "data": "INCOME_STATE_COUNT", "name": "INCOME_STATE_COUNT" },
                    { "data": "INCOME_STATE_AMOUNT", "name": "INCOME_STATE_AMOUNT" },
                    { "data": "INCOME_LOCAL_COUNT", "name": "INCOME_LOCAL_COUNT" },
                    { "data": "INCOME_LOCAL_NUMBER", "name": "INCOME_LOCAL_NUMBER" },
                    { "data": "BUDGET_STATE_COUNT", "name": "BUDGET_STATE_COUNT" },
                    { "data": "BUDGET_STATE_AMOUNT", "name": "BUDGET_STATE_AMOUNT" },
                    { "data": "BUDGET_LOCAL_COUNT", "name": "BUDGET_LOCAL_COUNT" },
                    { "data": "BUDGET_LOCAL_AMOUNT", "name": "BUDGET_LOCAL_AMOUNT" },
                    { "data": "ACCOUNTANT_COUNT", "name": "ACCOUNTANT_COUNT" },
                    { "data": "ACCOUNTANT_AMOUNT", "name": "ACCOUNTANT_AMOUNT" },
                    { "data": "EFFICIENCY_COUNT", "name": "EFFICIENCY_COUNT" },
                    { "data": "EFFICIENCY_AMOUNT", "name": "EFFICIENCY_AMOUNT" },
                    { "data": "LAW_COUNT", "name": "LAW_COUNT" },
                    { "data": "LAW_AMOUNT", "name": "LAW_AMOUNT" },
                    { "data": "MONITORING_COUNT", "name": "MONITORING_COUNT" },
                    { "data": "MONITORING_AMOUNT", "name": "MONITORING_AMOUNT" },
                    { "data": "PURCHASE_COUNT", "name": "PURCHASE_COUNT" },
                    { "data": "PURCHASE_AMOUNT", "name": "PURCHASE_AMOUNT" },
                    { "data": "COST_COUNT", "name": "COST_COUNT" },
                    { "data": "COST_AMOUNT", "name": "COST_AMOUNT" },
                    { "data": "OTHER_COUNT", "name": "OTHER_COUNT" },
                    { "data": "OTHER_AMOUNT", "name": "OTHER_AMOUNT" },
                    { "data": "ALL_COUNT", "name": "ALL_COUNT" },
                    { "data": "ALL_AMOUNT", "name": "ALL_AMOUNT" },
                    {
                        "data": null, "sortable": false, "class": 'text-center',
                        render: function (data, type, row, meta) {
                            var tmp = '<div class="btn-group">';
                            var urledit = '<a href="#" class="btn btn-sm" onclick="BM7.edit(' + data.ID + ')"><i class="fa fa-edit"></i></a>';
                            var urldelete = '<a href="#" class="btn btn-sm" onclick="BM7.delete(' + data.ID + ')"><i class="fa fa-trash-alt" ></i></a>';
                            tmp += urledit;
                            tmp += urldelete;
                            tmp += "</div>";
                            return tmp;
                        }
                    }
                ],
                "destroy": true,
                "scrollCollapse": true,
                "paging": true,
                "lengthMenu": [[10, 25, 50], [10, 25, 50]],
                "filter": true,
                "info": true,
                "stateSave": false,
                "bAutoWidth": false,
                lengthChange: true,
                "language": datatables.language
            });

        }
        $('#DeparmentID').change(function () {
            bm7ListInit();
        });
        $('#PeriodID').change(function () {
            bm7ListInit();
        });
        var BM7 = {
        bm7ID: null,
        display: function (data) {
            $("div#bm7modalcontainer").remove();
            $('<div/>', { id: "bm7modalcontainer" }).appendTo('body').append(data);

            $("#Bm7Modal").modal({ show: true });
        },
        loadTemplate: function () {
            $.ajax({
                    url: "@Url.Action("BM7AddEdit", "Statistic", new { Area = "" })",
                    type: 'GET',
                    success: function (data) {
                        BM7.display(data);
                    },
                    error: errorResponse,
                    beforeSend: function () {
                        Modal.show();
                    },
                    complete: function () {
                        Modal.hide();
                    }
                });
        },
        edit: function (id) {
            $.ajax({
                url: "@Url.Action("BM7Detail", "Statistic", new { Area = "" })",
                type: 'POST',
                data: { id },
                success: function (data, status, xhr) {
                    BM7.progressResponse(data, status, xhr);
                },
                error: errorResponse,
                beforeSend: function () {
                    Modal.show();
                },
                complete: function () {
                    Modal.hide();
                }
            });
        },
        delete: function (id) {
            BM7.bm7ID = id;
            var r = confirm("Устгах уу!");
            if (r) {
                $.ajax({
                    url: "@Url.Action("BM7Delete", "Statistic", new { Area = "" })",
                    type: 'POST',
                    data: { id },
                    success: function (data, status, xhr) {
                        BM7.progressResponse(data, status, xhr);
                    },
                    error: errorResponse,
                    beforeSend: function () {
                        Modal.show();
                    },
                    complete: function () {
                        Modal.hide();
                    }
                });
            }
        },
        close: function () {
            $("#Bm7Modal").modal("hide");
        },
        progressResponse: function (data, status, xhr) {
            var ct = xhr.getResponseHeader("content-type") || "";
            if (ct.indexOf("html") > -1) {
                BM7.display(data);
            }
            if (ct.indexOf('json') > -1) {
                if (data.error) {
                    Message.error(data.message);
                } else {
                    $('.modal-backdrop:first').remove()
                    BM7.close();
                    bm7ListInit();
                    Message.success(data.message);
                }
            }
        }
    }
        function exportFile(tableid, excelname,) {
            $('#exportXLSX').prop('disabled', true);
            table.destroy();
            bm7ListInit(-1);

            setTimeout(function () {
                var wb = XLSX.utils.table_to_book(document.getElementById(tableid));
                XLSX.writeFile(wb, excelname + '.xlsx');

                table.destroy();
                bm7ListInit();
                $('#exportXLSX').prop('disabled', false);
            }, 5000
            )
        }
    </script>
}