@using Audit.Models
@model Audit.Models.BM3VM
@{
    ViewBag.Title = "BM3";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex">
    <a href="@Url.Action("Index","Statistic")" class="btn btn-sm btn-light mr-2">
        <span class="icon text-gray-600">
            <i class="fas fa-arrow-left"></i>
        </span>
    </a>
    <h4>БМ-3. Төрийн аудитын газрын аудитор болон багийн зөвлөмжийн бүртгэл</h4>
</div>
<hr class="sidebar-divider">
<form method="post" id="FilterForm">
    <div class="d-flex flex-wrap mb-2">

        <div class="form-group-sm pr-2">
            <label for="DeparmentID" class="col-form-label">Алба:</label>
            @Html.DropDownListFor(model => model.DeparmentID, Model.departments.Select(m => new SelectListItem { Text = m.DEPARTMENT_NAME, Value = m.DEPARTMENT_ID.ToString() }).ToList(), "Сонгоно уу", htmlAttributes: new { @class = "form-control form-control-sm" })
        </div>
        <div class="form-group-sm pr-2">
            <label for="PeriodID" class="col-form-label">Он:</label>
            @Html.DropDownListFor(model => model.PeriodID, Model.periods.Select(m => new SelectListItem { Text = m.PERIOD_LABEL, Value = m.ID.ToString() }).ToList(), null, htmlAttributes: new { @class = "form-control form-control-sm" })
        </div>

        <div class="form-group-sm ml-auto pr-2">
            <a href="#" class="btn btn-sm btn-secondary btn-icon-split" style="margin-top: 32px;" onclick="BM3.loadTemplate();">
                <span class="icon text-white-50">
                    <i class="fas fa-plus"></i>
                </span>
                <span class="text">Шинэ бүртгэл</span>
            </a>
        </div>


        <div class="form-group-sm pr-2">
            <a href="#" class="btn btn-sm btn-success btn-icon-split" id="exportXLSX" style="margin-top: 32px;" onclick="exportFile('BM3', 'БМ-3. Төрийн аудитын газрын аудитор болон багийн зөвлөмжийн бүртгэл')">
                <span class="icon text-white-50">
                    <i class="fas fa-file-excel"></i>
                </span>
                <span class="text">Excel</span>
            </a>
        </div>
    </div>
</form>
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table id="BM3" class="table table-bordered datatable display" style="width:100%">
                <thead>
                    <tr>
                        <th rowspan="3" class="text-center">№</th>
                        <th rowspan="3">Он</th>
                        <th rowspan="3">Аудитын төрөл</th>
                        <th rowspan="3">Аудитын код</th>
                        <th rowspan="3">Аудитын нэр</th>
                        <th rowspan="3">Сэдвийн ангилал</th>
                        <th colspan="2">Батлагдсан тушаал</th>
                        <th colspan="9">Аудитын зөвлөмжийн мэдээлэл</th>
                        <th rowspan="3">Зөвлөмжийн хэрэгжилтэд хяналт тавих аудитор, шинжээчийн овог нэр, албан тушаал</th>
                        <th rowspan="3">Зөвлөмжийн биелэлтийг мэдээлсэн баримт бичгийн нэр, огноо, дугаар</th>
                        <th colspan="4">Зөвлөмжийн биелэлт</th>
                        <th colspan="4">Дараа онд шилжих үлдэгдэл</th>
                        <th colspan="3">Хүлээн зөвшөөрүүлсэн үр өгөөж</th>
                        <th rowspan="3" class="text-center">Үйлдэл</th>
                    </tr>
                    <tr>
                        <th rowspan="2">Огноо</th>
                        <th rowspan="2">Дугаар</th>
                        <th rowspan="2">Зөвлөмжийн утга</th>
                        <th rowspan="2">Зөвлөмж өгсөн илрүүлэлтийн ангилал</th>
                        <th rowspan="2">Өгсөн зөвлөмжийн дүн</th>
                        <th colspan="2">Зөвлөмжийн хугацаа (он, сар, өдөр)</th>
                        <th colspan="4">Зөвлөмжийн биелэлтийг хариуцах албан тушаалтан</th>
                        <th colspan="2">Хэрэгжсэн</th>
                        <th colspan="2">Хэрэгжээгүй</th>
                        <th colspan="2">Хугацаа болоогүй</th>
                        <th colspan="2">Хугацаа хэтэрсэн</th>
                        <th colspan="2">Санхүүгийн</th>
                        <th rowspan="2">Санхүүгийн бус үр өгөөжийн тоо</th>
                    </tr>
                    <tr>
                        <th>Хүргүүлсэн</th>
                        <th>Биелэлтийг тооцох</th>
                        <th>Байгууллагын нэр</th>
                        <th>Албан тушаал</th>
                        <th>Овог нэр</th>
                        <th>Холбоо барих хаяг, утас</th>
                        <th>Тоо</th>
                        <th>Дүн</th>
                        <th>Тоо</th>
                        <th>Дүн</th>
                        <th>Тоо</th>
                        <th>Дүн</th>
                        <th>Тоо</th>
                        <th>Дүн</th>
                        <th>Тоо</th>
                        <th>Дүн</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            bm3ListInit();
        });

        function bm3ListInit(pagelength = 10) {
            var table = $("#BM3").DataTable({
                "serverSide": true,
                "processing": true,
                "ajax": {
                    url: "/api/service/bm3list",
                    type: 'POST',
                    data: function (data) {
                        data.DeparmentID = $('#DeparmentID').val();
                        data.PeriodID = $('#PeriodID').val();
                        return data;
                    }
                },
                createdRow: function (row, data, dataIndex) {
                    $(row).attr('data-id', data.ID);
                },
                "columns": [
                    {
                        "data": null, "sortable": false, "class": 'text-center',
                        render: function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    { "data": "AUDIT_YEAR", "name": "AUDIT_YEAR" },
                    { "data": "AUDIT_TYPE", "name": "AUDIT_TYPE" },
                    { "data": "AUDIT_CODE", "name": "AUDIT_CODE" },
                    { "data": "AUDIT_NAME", "name": "AUDIT_NAME" },
                    { "data": "AUDIT_BUDGET_TYPE", "name": "AUDIT_BUDGET_TYPE" },
                    { "data": "ORDER_DATE", "name": "ORDER_DATE" },
                    { "data": "ORDER_NO", "name": "ORDER_NO" },
                    { "data": "REFERENCE_DESC", "name": "REFERENCE_DESC" },
                    { "data": null, "name": null },
                    { "data": "REFERENCE_AMOUNT", "name": "REFERENCE_AMOUNT" },
                    { "data": "REFERENCE_SUBMITTED_DATE", "name": "REFERENCE_SUBMITTED_DATE" },
                    { "data": "REFERENCE_DELIVERY_DATE", "name": "REFERENCE_DELIVERY_DATE" },
                    { "data": "REFERENCE_RCV_NAME", "name": "REFERENCE_RCV_NAME" },
                    { "data": "REFERENCE_RCV_ROLE", "name": "REFERENCE_RCV_ROLE" },
                    { "data": "REFERENCE_RCV_GIVEN_NAME", "name": "REFERENCE_RCV_GIVEN_NAME" },
                    { "data": "REFERENCE_RCV_ADDRESS", "name": "REFERENCE_RCV_ADDRESS" },
                    { "data": "REFERENCE_CONTROL_AUDITOR", "name": "REFERENCE_CONTROL_AUDITOR" },
                    { "data": "COMPLETION_ORDER", "name": "COMPLETION_ORDER" },
                    { "data": "COMPLETION_DONE", "name": "COMPLETION_DONE" },
                    { "data": "COMPLETION_DONE_AMOUNT", "name": "COMPLETION_DONE_AMOUNT" },
                    { "data": "COMPLETION_PROGRESS", "name": "COMPLETION_PROGRESS" },
                    { "data": "COMPLETION_PROGRESS_AMOUNT", "name": "COMPLETION_PROGRESS_AMOUNT" },
                    { "data": "C2_NONEXPIRED", "name": "C2_NONEXPIRED" },
                    { "data": "C2_NONEXPIRED_AMOUNT", "name": "C2_NONEXPIRED_AMOUNT" },
                    { "data": "C2_EXPIRED", "name": "C2_EXPIRED" },
                    { "data": "C2_EXPIRED_AMOUNT", "name": "C2_EXPIRED_AMOUNT" },
                    { "data": "BENEFIT_FIN", "name": "BENEFIT_FIN" },
                    { "data": "BENEFIT_FIN_AMOUNT", "name": "BENEFIT_FIN_AMOUNT" },
                    { "data": "BENEFIT_NONFIN", "name": "BENEFIT_NONFIN" },
                    //{ "data": "WORKING_PERSON", "name": "WORKING_PERSON" },
                    //{ "data": "WORKING_DAY", "name": "WORKING_DAY" },
                    //{ "data": "WORKING_ADDITION_TIME", "name": "WORKING_ADDITION_TIME" },
                    {
                        "data": null, "sortable": false, "class": 'text-center',
                        render: function (data, type, row, meta) {
                            var tmp = '<div class="btn-group">';
                            var urledit = '<a href="#" class="btn btn-sm" onclick="BM3.edit(' + data.ID + ')"><i class="fa fa-edit"></i></a>';
                            var urldelete = '<a href="#" class="btn btn-sm" onclick="BM3.delete(' + data.ID + ')"><i class="fa fa-trash-alt" ></i></a>';
                            tmp += urledit;
                            tmp += urldelete;
                            tmp += "</div>";
                            return tmp;
                        }
                    }
                ],
                "destroy": true,
                "scrollCollapse": true,
                "paging": true,
                "pageLength": pagelength,
                "lengthMenu": [[10, 25, 50], [10, 25, 50]],
                "filter": true,
                "info": true,
                "stateSave": false,
                "bAutoWidth": false,
                lengthChange: true,
                "language": datatables.language
            });

        }
        $('#DeparmentID').change(function () {
            bm3ListInit();
        });
        $('#PeriodID').change(function () {
            bm3ListInit();
        });
        var BM3 = {
            bm3ID: null,
            table:null,
        display: function (data) {
            $("div#bm3modalcontainer").remove();
            $('<div/>', { id: "bm3modalcontainer" }).appendTo('body').append(data);

            $("#Bm3Modal").modal({ show: true });
        },
        loadTemplate: function () {
            $.ajax({
                    url: "@Url.Action("BM3AddEdit", "Statistic", new { Area = "" })",
                    type: 'GET',
                    success: function (data) {
                        BM3.display(data);
                    },
                    error: errorResponse,
                    beforeSend: function () {
                        Modal.show();
                    },
                    complete: function () {
                        Modal.hide();
                    }
                });
        },
        edit: function (id) {
            $.ajax({
                url: "@Url.Action("BM3Detail", "Statistic", new { Area = "" })",
                type: 'POST',
                data: { id },
                success: function (data, status, xhr) {
                    BM3.progressResponse(data, status, xhr);
                },
                error: errorResponse,
                beforeSend: function () {
                    Modal.show();
                },
                complete: function () {
                    Modal.hide();
                }
            });
        },
        delete: function (id) {
            BM3.bm3ID = id;
            var r = confirm("Устгах уу!");
            if (r) {
                $.ajax({
                    url: "@Url.Action("BM3Delete", "Statistic", new { Area = "" })",
                    type: 'POST',
                    data: { id },
                    success: function (data, status, xhr) {
                        BM3.progressResponse(data, status, xhr);
                    },
                    error: errorResponse,
                    beforeSend: function () {
                        Modal.show();
                    },
                    complete: function () {
                        Modal.hide();
                    }
                });
            }
        },
        close: function () {
            $("#Bm3Modal").modal("hide");
        },
        progressResponse: function (data, status, xhr) {
            var ct = xhr.getResponseHeader("content-type") || "";
            if (ct.indexOf("html") > -1) {
                BM3.display(data);
            }
            if (ct.indexOf('json') > -1) {
                if (data.error) {
                    Message.error(data.message);
                } else {
                    $('.modal-backdrop:first').remove()
                    BM3.close();
                    bm3ListInit();
                    Message.success(data.message);
                }
            }
        }
    }
        function exportFile(tableid, excelname,) {
            $('#exportXLSX').addClass('disabled');
            BM3.table.destroy();
            bm3ListInit(-1);

            setTimeout(function () {
                var wb = XLSX.utils.table_to_book(document.getElementById(tableid));
                XLSX.writeFile(wb, excelname + '.xlsx');

                BM3.table.destroy();
                bm3ListInit();
                $('#exportXLSX').removeClass('disabled');
            }, 5000
            )
        }
    </script>
} 