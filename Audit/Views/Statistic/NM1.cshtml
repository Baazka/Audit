</div>

@section scripts{
    <script>
        $(document).ready(function () {
            nm1ListInit();
        });

        function nm1ListInit(pagelength = 10) {
            NM1.table = $("#NM1").DataTable({
                "serverSide": true,
                "processing": true,
                "ajax": {
                    url: "/api/service/nm1list",
                    type: 'POST',
                    data: function (data) {
                        data.DeparmentID = $('#DeparmentID').val();
                        data.PeriodID = $('#PeriodID').val();
                        return data;
                    }
                },
                createdRow: function (row, data, dataIndex) {
                    $(row).attr('data-id', data.ID);
                },
                "columns": [
                    {
                        "data": null, "sortable": false, "class": 'text-center',
                        render: function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    //{ "data": "AUDIT_YEAR", "name": "AUDIT_YEAR" },
                    //{ "data": "AUDIT_TYPE", "name": "AUDIT_TYPE" },
                    { "data": "AUDIT_CODE", "name": "AUDIT_CODE" },
                    { "data": "AUDIT_NAME", "name": "AUDIT_NAME" },
                    //{ "data": "AUDIT_BUDGET_TYPE", "name": "AUDIT_BUDGET_TYPE" },

                    { "data": "ACT_COUNT", "name": "ACT_COUNT" },
                    { "data": "ACT_AMOUNT", "name": "ACT_AMOUNT" },
                    { "data": "COMPLETION_COUNT", "name": "COMPLETION_COUNT" },
                    { "data": "COMPLETION_AMOUNT", "name": "COMPLETION_AMOUNT" },
                    { "data": "COMPLETION_STATE_COUNT", "name": "COMPLETION_STATE_COUNT" },
                    { "data": "COMPLETION_STATE_AMOUNT", "name": "COMPLETION_STATE_AMOUNT" },
                    { "data": "COMPLETION_LOCAL_COUNT", "name": "COMPLETION_LOCAL_COUNT" },
                    { "data": "COMPLETION_LOCAL_AMOUNT", "name": "COMPLETION_LOCAL_AMOUNT" },
                    { "data": "COMPLETION_ORG_COUNT", "name": "COMPLETION_ORG_COUNT" },
                    { "data": "COMPLETION_ORG_AMOUNT", "name": "COMPLETION_ORG_AMOUNT" },
                    { "data": "COMPLETION_OTHER_COUNT", "name": "COMPLETION_OTHER_COUNT" },
                    { "data": "COMPLETION_OTHER_AMOUNT", "name": "COMPLETION_OTHER_AMOUNT" },
                    { "data": "REMOVED_COUNT", "name": "REMOVED_COUNT" },
                    { "data": "REMOVED_AMOUNT", "name": "REMOVED_AMOUNT" },
                    { "data": "REMOVED_LAW_COUNT", "name": "REMOVED_LAW_COUNT" },
                    { "data": "REMOVED_LAW_AMOUNT", "name": "REMOVED_LAW_AMOUNT" },
                    { "data": "REMOVED_INVALID_COUNT", "name": "REMOVED_INVALID_COUNT" },
                    { "data": "REMOVED_INVALID_AMOUNT", "name": "REMOVED_INVALID_AMOUNT" },
                    { "data": "ACT_C2_COUNT", "name": "ACT_C2_COUNT" },
                    { "data": "ACT_C2_AMOUNT", "name": "ACT_C2_AMOUNT" },
                    { "data": "ACT_NONEXPIRED_COUNT", "name": "ACT_NONEXPIRED_COUNT" },
                    { "data": "ACT_NONEXPIRED_AMOUNT", "name": "ACT_NONEXPIRED_AMOUNT" },
                    { "data": "ACT_EXPIRED_COUNT", "name": "ACT_EXPIRED_COUNT" },
                    { "data": "ACT_EXPIRED_AMOUNT", "name": "ACT_EXPIRED_AMOUNT" },
                    { "data": "BENEFIT_FIN", "name": "BENEFIT_FIN" },
                    { "data": "BENEFIT_FIN_AMOUNT", "name": "BENEFIT_FIN_AMOUNT" },
                    { "data": "BENEFIT_NONFIN", "name": "BENEFIT_NONFIN" },
                    //{ "data": "EXEC_TYPE", "name": "EXEC_TYPE" },
                ],
                "destroy": true,
                "scrollCollapse": true,
                "paging": true,
                "pageLength": pagelength,
                "lengthMenu": [[10, 25, 50], [10, 25, 50]],
                "filter": true,
                "info": true,
                "stateSave": false,
                "bAutoWidth": false,
                lengthChange: true,
                "language": datatables.language
            });

        }
        $('#DeparmentID').change(function () {
            nm1ListInit();
        });
        $('#PeriodID').change(function () {
            nm1ListInit();
        });
        var NM1 = {
            nm1ID: null,
            table:null,
        display: function (data) {
            $("div#nm1modalcontainer").remove();
            $('<div/>', { id: "nm1modalcontainer" }).appendTo('body').append(data);

            $("#Nm1Modal").modal({ show: true });
        },
        loadTemplate: function () {
            $.ajax({
                    url: "@Url.Action("NM1AddEdit", "Statistic", new { Area = "" })",
                    type: 'GET',
                    success: function (data) {
                        NM1.display(data);
                    },
                    error: errorResponse,
                    beforeSend: function () {
                        Modal.show();
                    },
                    complete: function () {
                        Modal.hide();
                    }
                });
        },
        edit: function (id) {
            $.ajax({
                url: "@Url.Action("NM1Detail", "Statistic", new { Area = "" })",
                type: 'POST',
                data: { id },
                success: function (data, status, xhr) {
                    NM1.progressResponse(data, status, xhr);
                },
                error: errorResponse,
                beforeSend: function () {
                    Modal.show();
                },
                complete: function () {
                    Modal.hide();
                }
            });
        },
        delete: function (id) {
            NM1.nm1ID = id;
            var r = confirm("Устгах уу!");
            if (r) {
                $.ajax({
                    url: "@Url.Action("NM1Delete", "Statistic", new { Area = "" })",
                    type: 'POST',
                    data: { id },
                    success: function (data, status, xhr) {
                        NM1.progressResponse(data, status, xhr);
                    },
                    error: errorResponse,
                    beforeSend: function () {
                        Modal.show();
                    },
                    complete: function () {
                        Modal.hide();
                    }
                });
            }
        },
        close: function () {
            $("#Nm1Modal").modal("hide");
        },
        progressResponse: function (data, status, xhr) {
            var ct = xhr.getResponseHeader("content-type") || "";
            if (ct.indexOf("html") > -1) {
                NM1.display(data);
            }
            if (ct.indexOf('json') > -1) {
                if (data.error) {
                    Message.error(data.message);
                } else {
                    $('.modal-backdrop:first').remove()
                    NM1.close();
                    nm1ListInit();
                    Message.success(data.message);
                }
            }
        }
    }
        function exportFile(tableid, excelname,) {
            $('#exportXLSX').addClass('disabled');
            NM1.table.destroy();
            nm1ListInit(-1);

            setTimeout(function () {
                var wb = XLSX.utils.table_to_book(document.getElementById(tableid));
                XLSX.writeFile(wb, excelname + '.xlsx');

                NM1.table.destroy();
                nm1ListInit();
                $('#exportXLSX').removeClass('disabled');
            }, 5000
            )
        }
    </script>
}
