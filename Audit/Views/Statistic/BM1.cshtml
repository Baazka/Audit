@using Audit.Models
@model Audit.Models.BM1VM
@{
    ViewBag.Title = "BM1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex">
    <a href="@Url.Action("Index","Statistic")" class="btn btn-sm btn-light mr-2">
        <span class="icon text-gray-600">
            <i class="fas fa-arrow-left"></i>
        </span>
    </a>
    <h4>БМ-1. Төрийн аудитын газрын аудитор болон багийн төлбөрийн актын бүртгэл</h4>
</div>
<hr class="sidebar-divider">
<form method="post" id="FilterForm">
    <div class="d-flex flex-wrap mb-2">

        <div class="form-group-sm pr-2">
            <label for="DeparmentID" class="col-form-label">Алба:</label>
            @Html.DropDownListFor(model => model.DeparmentID, Model.departments.Select(m => new SelectListItem { Text = m.DEPARTMENT_NAME, Value = m.DEPARTMENT_ID.ToString() }).ToList(), "Сонгоно уу", htmlAttributes: new { @class = "form-control form-control-sm" })
        </div>
        <div class="form-group-sm pr-2">
            <label for="PeriodID" class="col-form-label">Он:</label>
            @Html.DropDownListFor(model => model.PeriodID, Model.periods.Select(m => new SelectListItem { Text = m.PERIOD_LABEL, Value = m.ID.ToString() }).ToList(), null, htmlAttributes: new { @class = "form-control form-control-sm" })
        </div>

        <div class="form-group-sm ml-auto pr-2">
            <a href="#" class="btn btn-sm btn-secondary btn-icon-split" style="margin-top: 32px;" onclick="BM1.loadTemplate();">
                <span class="icon text-white-50">
                    <i class="fas fa-plus"></i>
                </span>
                <span class="text">Шинэ бүртгэл</span>
            </a>
        </div>


        <div class="form-group-sm pr-2">
            <a href="#" class="btn btn-sm btn-success btn-icon-split" id="exportXLSX" style="margin-top: 32px;" onclick="exportFile('BM1', 'БМ-1. Төрийн аудитын газрын аудитор болон багийн төлбөрийн актын бүртгэл')">
                <span class="icon text-white-50">
                    <i class="fas fa-file-excel"></i>
                </span>
                <span class="text">Excel</span>
            </a>
        </div>
    </div>
</form>
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table id="BM1" class="table table-bordered datatable display" style="width:100%">
                <thead>
                    <tr>
                        <th rowspan="4" class="text-center">№</th>
                        <th rowspan="4">Он</th>
                        <th rowspan="4">Аудитын төрөл</th>
                        <th rowspan="4">Аудитын код</th>
                        <th rowspan="4">Аудитын нэр</th>
                        <th rowspan="4">Төсөв захирагч / Сэдвийн ангилал</th>
                        <th colspan="2">Батлагдсан тушаал</th>
                        <th colspan="14">Төлбөрийн актын мэдээлэл</th>
                        <th rowspan="4">Төлбөрийн актын хэрэгжилтэд хяналт тавих аудитор, шинжээчийн овог, нэр, албан тушаал</th>
                        <th colspan="6">Төлбөрийн актын биелэлт</th>
                        <th colspan="5">Бүртгэлээс хасагдсан</th>
                        <th rowspan="4">Дараа онд шилжих үлдэгдлийн дүн</th>
                        <th colspan="2" rowspan="2">Үүнээс</th>
                        <th colspan="3">Хүлээн зөвшөөрүүлсэн үр өгөөж</th>
                        <th rowspan="4">Үйлдэл</th>
                    </tr>
                    <tr>
                        <th rowspan="3">Огноо</th>
                        <th rowspan="3">Дугаар</th>
                        <th rowspan="3">Төлбөрийн актын дугаар, огноо</th>
                        <th rowspan="3">Илрүүлсэн зөрчлийн товч утга</th>
                        <th rowspan="3">Зөрчлийн ангилал</th>
                        <th colspan="2">Хугацаа (он, сар, өдөр)</th>
                        <th colspan="5">Төлбөрийн дүн</th>
                        <th colspan="4">Төлбөрийн актыг хүлээн авсан</th>
                        <th rowspan="3">Төлбөрийн баримтын нэр, огноо, дугаар</th>
                        <th rowspan="3">Дүн</th>
                        <th colspan="4">Үүнээс</th>
                        <th rowspan="3">Дүн</th>
                        <th colspan="2">Хуулийн байгууллагад шилжүүлсэн</th>
                        <th colspan="2">Тушаалаар хүчингүй болгосон</th>
                        <th colspan="2">Санхүүгийн</th>
                        <th rowspan="3">Санхүүгийн бус үр өгөөжийн тоо</th>
                    </tr>
                    <tr>
                        <th rowspan="2">Хүлээлгэн өгсөн</th>
                        <th rowspan="2">Төлбөрийг барагдуулах</th>
                        <th rowspan="2">Дүн</th>
                        <th colspan="4">Үүнээс</th>
                        <th rowspan="2">Байгууллагын нэр</th>
                        <th rowspan="2">Албан тушаал</th>
                        <th rowspan="2">Овог нэр</th>
                        <th rowspan="2">Холбоо барих хаяг, утас</th>
                        <th rowspan="2">Улсын төсөвт</th>
                        <th rowspan="2">Орон нутгийн төсөвт</th>
                        <th rowspan="2">Тухайн байгууллагад</th>
                        <th rowspan="2">Бусад</th>
                        <th rowspan="2">Дүн</th>
                        <th rowspan="2">Огноо, Дугаар</th>
                        <th rowspan="2">Дүн</th>
                        <th rowspan="2">Огноо, Дугаар</th>
                        <th rowspan="2">Хугацаа болоогүй</th>
                        <th rowspan="2">Хугацаа хэтэрсэн</th>
                        <th rowspan="2">Тоо</th>
                        <th rowspan="2">Дүн</th>
                    </tr>
                    <tr>
                        <th>Улсын төсөвт</th>
                        <th>Орон нутгийн төсөвт</th>
                        <th>Тухайн байгууллагад</th>
                        <th>Бусад</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            bm1ListInit();
        });

        function bm1ListInit(pagelength = 10) {
            BM1.table = $("#BM1").DataTable({
                "serverSide": true,
                "processing": true,
                "ajax": {
                    url: "/api/service/bm1list",
                    type: 'POST',
                    data: function (data) {
                        data.DeparmentID = $('#DeparmentID').val();
                        data.PeriodID = $('#PeriodID').val();
                        return data;
                    }
                },
                createdRow: function (row, data, dataIndex) {
                    $(row).attr('data-id', data.ID);
                },
                "columns": [
                    {
                        "data": null, "sortable": false, "class": 'text-center',
                        render: function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    { "data": "AUDIT_YEAR", "name": "AUDIT_YEAR" },
                    { "data": "AUDIT_TYPE_NAME", "name": "AUDIT_TYPE_NAME" },
                    { "data": "AUDIT_CODE", "name": "AUDIT_CODE" },
                    { "data": "AUDIT_NAME", "name": "AUDIT_NAME" },
                    { "data": "BUDGET_TYPE_NAME", "name": "BUDGET_TYPE_NAME" },
                    { "data": "ORDER_DATE", "name": "ORDER_DATE" },
                    { "data": "ORDER_NO", "name": "ORDER_NO" },
                    { "data": "ACT_NO", "name": "ACT_NO" },
                    { "data": "ACT_VIOLATION_DESC", "name": "ACT_VIOLATION_DESC" },
                    { "data": "VIOLATION_NAME", "name": "VIOLATION_NAME" },
                    { "data": "ACT_SUBMITTED_DATE", "name": "ACT_SUBMITTED_DATE" },
                    { "data": "ACT_DELIVERY_DATE", "name": "ACT_DELIVERY_DATE" },
                    { "data": "ACT_AMOUNT", "name": "ACT_AMOUNT" },
                    { "data": "ACT_STATE_AMOUNT", "name": "ACT_STATE_AMOUNT" },
                    { "data": "ACT_LOCAL_AMOUNT", "name": "ACT_LOCAL_AMOUNT" },
                    { "data": "ACT_ORG_AMOUNT", "name": "ACT_ORG_AMOUNT" },
                    { "data": "ACT_OTHER_AMOUNT", "name": "ACT_OTHER_AMOUNT" },
                    { "data": "ACT_RCV_NAME", "name": "ACT_RCV_NAME" },
                    { "data": "ACT_RCV_ROLE", "name": "ACT_RCV_ROLE" },
                    { "data": "ACT_RCV_GIVEN_NAME", "name": "ACT_RCV_GIVEN_NAME" },
                    { "data": "ACT_RCV_ADDRESS", "name": "ACT_RCV_ADDRESS" },
                    { "data": "ACT_CONTROL_AUDITOR", "name": "ACT_CONTROL_AUDITOR" },
                    { "data": "COMPLETION_ORDER", "name": "COMPLETION_ORDER" },
                    { "data": "COMPLETION_AMOUNT", "name": "COMPLETION_AMOUNT" },
                    { "data": "COMPLETION_STATE_AMOUNT", "name": "COMPLETION_STATE_AMOUNT" },
                    { "data": "COMPLETION_LOCAL_AMOUNT", "name": "COMPLETION_LOCAL_AMOUNT" },
                    { "data": "COMPLETION_ORG_AMOUNT", "name": "COMPLETION_ORG_AMOUNT" },
                    { "data": "COMPLETION_OTHER_AMOUNT", "name": "COMPLETION_OTHER_AMOUNT" },
                    { "data": "REMOVED_AMOUNT", "name": "REMOVED_AMOUNT" },
                    { "data": "REMOVED_LAW_AMOUNT", "name": "REMOVED_LAW_AMOUNT" },
                    { "data": "REMOVED_LAW_DATE_NO", "name": "REMOVED_LAW_DATE_NO" },
                    { "data": "REMOVED_INVALID_AMOUNT", "name": "REMOVED_INVALID_AMOUNT" },
                    { "data": "REMOVED_INVALID_DATE_NO", "name": "REMOVED_INVALID_DATE_NO" },
                    { "data": "ACT_C2_AMOUNT", "name": "ACT_C2_AMOUNT" },
                    { "data": "ACT_C2_NONEXPIRED", "name": "ACT_C2_NONEXPIRED" },
                    { "data": "ACT_C2_EXPIRED", "name": "ACT_C2_EXPIRED" },
                    { "data": "BENEFIT_FIN", "name": "BENEFIT_FIN" },
                    { "data": "BENEFIT_FIN_AMOUNT", "name": "BENEFIT_FIN_AMOUNT" },
                    { "data": "BENEFIT_NONFIN", "name": "BENEFIT_NONFIN" },
                    //{ "data": "EXEC_TYPE", "name": "EXEC_TYPE" },
                    {
                        "data": null, "sortable": false, "class": 'text-center',
                        render: function (data, type, row, meta) {
                            var tmp = '<div class="btn-group">';
                            var urledit = '<a href="#" class="btn btn-sm" onclick="BM1.edit(' + data.ID + ')"><i class="fa fa-edit"></i></a>';
                            var urldelete = '<a href="#" class="btn btn-sm" onclick="BM1.delete(' + data.ID + ')"><i class="fa fa-trash-alt" ></i></a>';
                            tmp += urledit;
                            tmp += urldelete;
                            tmp += "</div>";
                            return tmp;
                        }
                    }
                ],
                "destroy": true,
                "scrollCollapse": true,
                "paging": true,
                "pageLength": pagelength,
                "lengthMenu": [[10, 25, 50], [10, 25, 50]],
                "filter": true,
                "info": true,
                "stateSave": false,
                "bAutoWidth": false,
                lengthChange: true,
                "language": datatables.language
            });
        }
        function Choose (id, code, name, orderdate, orderno, audittype) {
            $("#Bm1Modal input#AUDIT_ID").val(id);
            $("#Bm1Modal #AUDIT_TYPE").val(audittype);
            $("#Bm1Modal input#AUDIT_CODE").val(code);
            $("#Bm1Modal input#AUDIT_NAME").val(name);
            $("#Bm1Modal input#ORDER_DATE").val(orderdate);
            $("#Bm1Modal input#ORDER_NO").val(orderno);

            $('#BM0ListModel').modal('hide');
        }
        $('#DeparmentID').change(function () {
            bm1ListInit();
        });
        $('#PeriodID').change(function () {
            bm1ListInit();
        });
        var BM1 = {
            bm1ID: null,
            table:null,
        display: function (data) {
            $("div#bm1modalcontainer").remove();
            $('<div/>', { id: "bm1modalcontainer" }).appendTo('body').append(data);

            $("#Bm1Modal").modal({ show: true });

            $(".btnBM0listPopup").on('click', function () {
                if ($('#OFFICE_ID').val() != null && $('#OFFICE_ID').val() != '')
                    BM1.BM0List($('#OFFICE_ID').val());
                else 
                    alert('Төрийн аудитын байгууллага сонгоно уу.');                
            });
        },
        displayBM0List: function (data) {
            $("div#bm0listmodalcontainer").remove();
                $('<div/>', { id: "bm0listmodalcontainer" }).appendTo('body').append(data);

                $('#Bm1Modal').modal('hide');
            $('#BM0ListModel').modal({ show: true }).on('hidden.bs.modal', function (e) {
                $('#Bm1Modal').modal('show');
            });
        },
        BM0List: function (officeid) {
            $.ajax({
                    url: '@Url.Action("BM0Search", "Statistic", new { Area = "" })',
                    type: 'GET',
                    cache: false,
                    data: { officeid },
                    success: function (data) {
                        BM1.displayBM0List(data);
                    },
                    error: errorResponse,
                    beforeSend: function () {
                        Modal.show();
                    },
                    complete: function () {
                        Modal.hide();
                    }
                });
        },            
        loadTemplate: function () {
            $.ajax({
                    url: "@Url.Action("BM1AddEdit", "Statistic", new { Area = "" })",
                    type: 'GET',
                    success: function (data) {
                        BM1.display(data);
                    },
                    error: errorResponse,
                    beforeSend: function () {
                        Modal.show();
                    },
                    complete: function () {
                        Modal.hide();
                    }
                });
        },
        edit: function (id) {
            $.ajax({
                url: "@Url.Action("BM1Detail", "Statistic", new { Area = "" })",
                type: 'POST',
                data: { id },
                success: function (data, status, xhr) {
                    BM1.progressResponse(data, status, xhr);
                },
                error: errorResponse,
                beforeSend: function () {
                    Modal.show();
                },
                complete: function () {
                    Modal.hide();
                }
            });
        },
        delete: function (id) {
            BM1.bm1ID = id;
            var r = confirm("Устгах уу!");
            if (r) {
                $.ajax({
                    url: "@Url.Action("BM1Delete", "Statistic", new { Area = "" })",
                    type: 'POST',
                    data: { id },
                    success: function (data, status, xhr) {
                        BM1.progressResponse(data, status, xhr);
                    },
                    error: errorResponse,
                    beforeSend: function () {
                        Modal.show();
                    },
                    complete: function () {
                        Modal.hide();
                    }
                });
            }
        },
        close: function () {
            $("#Bm1Modal").modal("hide");
        },
        progressResponse: function (data, status, xhr) {
            var ct = xhr.getResponseHeader("content-type") || "";
            if (ct.indexOf("html") > -1) {
                BM1.display(data);
            }
            if (ct.indexOf('json') > -1) {
                if (data.error) {
                    Message.error(data.message);
                } else {
                    $('.modal-backdrop:first').remove()
                    BM1.close();
                    bm1ListInit();
                    Message.success(data.message);
                }
            }
        }
    }
        function exportFile(tableid, excelname,) {
            $('#exportXLSX').addClass('disabled');
            BM1.table.destroy();
            bm1ListInit(-1);

            setTimeout(function () {
                var wb = XLSX.utils.table_to_book(document.getElementById(tableid));
                XLSX.writeFile(wb, excelname + '.xlsx');

                BM1.table.destroy();
                bm1ListInit();
                $('#exportXLSX').removeClass('disabled');
            }, 5000
            )
        }
    </script>
} 