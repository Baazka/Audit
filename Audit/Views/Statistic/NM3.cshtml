@using Audit.Models
@model Audit.Models.NM3VM
@{
    ViewBag.Title = "NM3";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-flex">
    <a href="@Url.Action("Index","Statistic")" class="btn btn-sm btn-light mr-2">
        <span class="icon text-gray-600">
            <i class="fas fa-arrow-left"></i>
        </span>
    </a>
    <h4>НМ-3. Төрийн аудитын газрын зөвлөмжийн нэгтгэл</h4>
</div>
<hr class="sidebar-divider">
<form method="post" id="FilterForm">
    <div class="d-flex flex-wrap mb-2">

        <div class="form-group-sm pr-2">
            <label for="DeparmentID" class="col-form-label">Алба:</label>
            @Html.DropDownListFor(model => model.DeparmentID, Model.departments.Select(m => new SelectListItem { Text = m.DEPARTMENT_NAME, Value = m.DEPARTMENT_ID.ToString() }).ToList(), "Сонгоно уу", htmlAttributes: new { @class = "form-control form-control-sm" })
        </div>
        <div class="form-group-sm pr-2">
            <label for="PeriodID" class="col-form-label">Он:</label>
            @Html.DropDownListFor(model => model.PeriodID, Model.periods.Select(m => new SelectListItem { Text = m.PERIOD_LABEL, Value = m.ID.ToString() }).ToList(), null, htmlAttributes: new { @class = "form-control form-control-sm" })
        </div>

        <div class="form-group-sm ml-auto pr-2">
            <a href="#" class="btn btn-sm btn-secondary btn-icon-split" style="margin-top: 32px;" onclick="NM3.loadTemplate();">
                <span class="icon text-white-50">
                    <i class="fas fa-plus"></i>
                </span>
                <span class="text">Шинэ бүртгэл</span>
            </a>
        </div>


        <div class="form-group-sm pr-2">
            <a href="#" class="btn btn-sm btn-success btn-icon-split" id="exportXLSX" style="margin-top: 32px;" onclick="exportFile('NM3', 'НМ-3. Төрийн аудитын газрын зөвлөмжийн нэгтгэл')">
                <span class="icon text-white-50">
                    <i class="fas fa-file-excel"></i>
                </span>
                <span class="text">Excel</span>
            </a>
        </div>
    </div>
</form>
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table id="NM3" class="table table-bordered datatable display" style="width:100%">
                <thead>
                    <tr>
                        <th rowspan="3" class="text-center">№</th>
                        <th rowspan="3">Аудитын код</th>
                        <th rowspan="3">Аудитын нэр</th>
                        <th colspan="2" rowspan="2">Өгсөн зөвлөмж</th>
                        <th colspan="4">Зөвлөмжийн биелэлт</th>
                        <th colspan="2" rowspan="2">Зөвлөмжийн үлдэгдэл</th>
                        <th colspan="4">Үүнээс</th>
                        <th colspan="3">Хүлээн зөвшөөрүүлсэн үр өгөөж</th>
                        <th colspan="3">Ажилласан</th>
                        <th rowspan="3" class="text-center">Үйлдэл</th>
                    </tr>
                    <tr>
                        <th colspan="2">Хэрэгжсэн</th>
                        <th colspan="2">Хэрэгжээгүй</th>
                        <th colspan="2">Хугацаа болоогүй</th>
                        <th colspan="2">Хугацаа хэтэрсэн</th>
                        <th colspan="2">Санхүүгийн</th>
                        <th>Санхүүгийн бус</th>
                        <th rowspan="2">Хүн</th>
                        <th rowspan="2">Өдөр</th>
                        <th rowspan="2">Илүү цаг</th>
                    </tr>
                    <tr>
                        <th>Тоо</th>
                        <th>Дүн</th>
                        <th>Тоо</th>
                        <th>Дүн</th>
                        <th>Тоо</th>
                        <th>Дүн</th>
                        <th>Тоо</th>
                        <th>Дүн</th>
                        <th>Тоо</th>
                        <th>Дүн</th>
                        <th>Тоо</th>
                        <th>Дүн</th>
                        <th>Тоо</th>
                        <th>Дүн</th>
                        <th>Тоо</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            nm3ListInit();
        });

        function nm3ListInit() {
            var table = $("#NM3").DataTable({
                "serverSide": true,
                "processing": true,
                "ajax": {
                    url: "/api/service/nm3list",
                    type: 'POST',
                    data: function (data) {
                        data.DeparmentID = $('#DeparmentID').val();
                        data.PeriodID = $('#PeriodID').val();
                        return data;
                    }
                },
                createdRow: function (row, data, dataIndex) {
                    $(row).attr('data-id', data.ID);
                },
                "columns": [
                    {
                        "data": null, "sortable": false, "class": 'text-center',
                        render: function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    //{ "data": "AUDIT_YEAR", "name": "AUDIT_YEAR" },
                    //{ "data": "AUDIT_TYPE", "name": "AUDIT_TYPE" },
                    { "data": "AUDIT_CODE", "name": "AUDIT_CODE" },
                    { "data": "AUDIT_NAME", "name": "AUDIT_NAME" },
                    //{ "data": "AUDIT_BUDGET_TYPE", "name": "AUDIT_BUDGET_TYPE" },

                    { "data": "REFERENCE_COUNT", "name": "REFERENCE_COUNT" },
                    { "data": "REFERENCE_AMOUNT", "name": "REFERENCE_AMOUNT" },
                    //{ "data": "REFERENCE_TYPE", "name": "REFERENCE_TYPE" },
                    { "data": "COMPLETION_DONE_COUNT", "name": "COMPLETION_DONE_COUNT" },
                    { "data": "COMPLETION_DONE_AMOUNT", "name": "COMPLETION_DONE_AMOUNT" },
                    { "data": "COMPLETION_PROGRESS_COUNT", "name": "COMPLETION_PROGRESS_COUNT" },
                    { "data": "COMPLETION_PROGRESS_AMOUNT", "name": "COMPLETION_PROGRESS_AMOUNT" },
                    { "data": null, "name": null },
                    { "data": null, "name": null },
                    { "data": "C2_NONEXPIRED_COUNT", "name": "C2_NONEXPIRED_COUNT" },
                    { "data": "C2_NONEXPIRED_AMOUNT", "name": "C2_NONEXPIRED_AMOUNT" },
                    { "data": "C2_EXPIRED_COUNT", "name": "C2_EXPIRED_COUNT" },
                    { "data": "C2_EXPIRED_AMOUNT", "name": "C2_EXPIRED_AMOUNT" },
                    { "data": "BENEFIT_FIN_COUNT", "name": "BENEFIT_FIN_COUNT" },
                    { "data": "BENEFIT_FIN_AMOUNT", "name": "BENEFIT_FIN_AMOUNT" },
                    { "data": "BENEFIT_NONFIN_COUNT", "name": "BENEFIT_NONFIN_COUNT" },
                    { "data": "WORKING_PERSON", "name": "WORKING_PERSON" },
                    { "data": "WORKING_DAY", "name": "WORKING_DAY" },
                    { "data": "WORKING_ADDITION_TIME", "name": "WORKING_ADDITION_TIME" },
                    //{ "data": "EXEC_TYPE", "name": "EXEC_TYPE" },
                    {
                        "data": null, "sortable": false, "class": 'text-center',
                        render: function (data, type, row, meta) {
                            var tmp = '<div class="btn-group">';
                            var urledit = '<a href="#" class="btn btn-sm" onclick="NM3.edit(' + data.ID + ')"><i class="fa fa-edit"></i></a>';
                            var urldelete = '<a href="#" class="btn btn-sm" onclick="NM3.delete(' + data.ID + ')"><i class="fa fa-trash-alt" ></i></a>';
                            tmp += urledit;
                            tmp += urldelete;
                            tmp += "</div>";
                            return tmp;
                        }
                    }
                ],
                "destroy": true,
                "scrollCollapse": true,
                "paging": true,
                "lengthMenu": [[10, 25, 50], [10, 25, 50]],
                "filter": true,
                "info": true,
                "stateSave": false,
                "bAutoWidth": false,
                lengthChange: true,
                "language": datatables.language
            });

        }
        $('#DeparmentID').change(function () {
            nm3ListInit();
        });
        $('#PeriodID').change(function () {
            nm3ListInit();
        });
        var NM3 = {
        nm3ID: null,
        display: function (data) {
            $("div#nm3modalcontainer").remove();
            $('<div/>', { id: "nm3modalcontainer" }).appendTo('body').append(data);

            $("#Nm3Modal").modal({ show: true });
        },
        loadTemplate: function () {
            $.ajax({
                    url: "@Url.Action("NM3AddEdit", "Statistic", new { Area = "" })",
                    type: 'GET',
                    success: function (data) {
                        NM3.display(data);
                    },
                    error: errorResponse,
                    beforeSend: function () {
                        Modal.show();
                    },
                    complete: function () {
                        Modal.hide();
                    }
                });
        },
        edit: function (id) {
            $.ajax({
                url: "@Url.Action("NM3Detail", "Statistic", new { Area = "" })",
                type: 'POST',
                data: { id },
                success: function (data, status, xhr) {
                    NM3.progressResponse(data, status, xhr);
                },
                error: errorResponse,
                beforeSend: function () {
                    Modal.show();
                },
                complete: function () {
                    Modal.hide();
                }
            });
        },
        delete: function (id) {
            NM3.nm3ID = id;
            var r = confirm("Устгах уу!");
            if (r) {
                $.ajax({
                    url: "@Url.Action("NM3Delete", "Statistic", new { Area = "" })",
                    type: 'POST',
                    data: { id },
                    success: function (data, status, xhr) {
                        NM3.progressResponse(data, status, xhr);
                    },
                    error: errorResponse,
                    beforeSend: function () {
                        Modal.show();
                    },
                    complete: function () {
                        Modal.hide();
                    }
                });
            }
        },
        close: function () {
            $("#Nm3Modal").modal("hide");
        },
        progressResponse: function (data, status, xhr) {
            var ct = xhr.getResponseHeader("content-type") || "";
            if (ct.indexOf("html") > -1) {
                NM3.display(data);
            }
            if (ct.indexOf('json') > -1) {
                if (data.error) {
                    Message.error(data.message);
                } else {
                    $('.modal-backdrop:first').remove()
                    NM3.close();
                    nm3ListInit();
                    Message.success(data.message);
                }
            }
        }
    }
        function exportFile(tableid, excelname,) {
            $('#exportXLSX').prop('disabled', true);
            table.destroy();
            nm3ListInit(-1);

            setTimeout(function () {
                var wb = XLSX.utils.table_to_book(document.getElementById(tableid));
                XLSX.writeFile(wb, excelname + '.xlsx');

                table.destroy();
                nm3ListInit();
                $('#exportXLSX').prop('disabled', false);
            }, 5000
            )
        }
    </script>
}