@using Audit.Models
@model Audit.Models.BM4VM
@{
    ViewBag.Title = "BM4";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex">
    <a href="@Url.Action("Index","Statistic")" class="btn btn-sm btn-light mr-2">
        <span class="icon text-gray-600">
            <i class="fas fa-arrow-left"></i>
        </span>
    </a>
    <h4>БМ-4. Төрийн аудитын газрын албан тушаалтанд хариуцлага тооцуулах саналын бүртгэл</h4>
</div>
<hr class="sidebar-divider">
<form method="post" id="FilterForm">
    <div class="d-flex flex-wrap mb-2">

        <div class="form-group-sm pr-2">
            <label for="DeparmentID" class="col-form-label">Алба:</label>
            @Html.DropDownListFor(model => model.DeparmentID, Model.departments.Select(m => new SelectListItem { Text = m.DEPARTMENT_NAME, Value = m.DEPARTMENT_ID.ToString() }).ToList(), "Сонгоно уу", htmlAttributes: new { @class = "form-control form-control-sm" })
        </div>
        <div class="form-group-sm pr-2">
            <label for="PeriodID" class="col-form-label">Он:</label>
            @Html.DropDownListFor(model => model.PeriodID, Model.periods.Select(m => new SelectListItem { Text = m.PERIOD_LABEL, Value = m.ID.ToString() }).ToList(), null, htmlAttributes: new { @class = "form-control form-control-sm" })
        </div>

        <div class="form-group-sm ml-auto pr-2">
            <a href="#" class="btn btn-sm btn-secondary btn-icon-split" style="margin-top: 32px;" onclick="BM4.loadTemplate();">
                <span class="icon text-white-50">
                    <i class="fas fa-plus"></i>
                </span>
                <span class="text">Шинэ бүртгэл</span>
            </a>
        </div>


        <div class="form-group-sm pr-2">
            <a href="#" class="btn btn-sm btn-success btn-icon-split" id="exportXLSX" style="margin-top: 32px;" onclick="exportFile('BM4', 'БМ-4. Төрийн аудитын газрын албан тушаалтанд хариуцлага тооцуулах саналын бүртгэл')">
                <span class="icon text-white-50">
                    <i class="fas fa-file-excel"></i>
                </span>
                <span class="text">Excel</span>
            </a>
        </div>
    </div>
</form>
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table id="BM4" class="table table-bordered datatable display" style="width:100%">
                <thead>
                    <tr>
                        <th rowspan="3" class="text-center">№</th>
                        <th rowspan="3">Он</th>
                        <th rowspan="3">Аудитын төрөл</th>
                        <th rowspan="3">Аудитын код</th>
                        <th rowspan="3">Аудитын нэр</th>
                        <th rowspan="3">Сэдвийн ангилал</th>
                        <th colspan="2">Батлагдсан тушаал</th>
                        <th colspan="11">Албан тушаалтанд хариуцлага тооцуулах саналын мэдээлэл</th>
                        <th rowspan="3">Албан шаардлагын хэрэгжилтэд хяналт тавих баг, аудитор, шинжээчийн овог, нэр, албан тушаал</th>
                        <th rowspan="3">Хариуцлага тооцсон баримтын огноо, дугаар</th>
                        <th colspan="4">Албан тушаалтанд хариуцлага тооцуулах саналын хэрэгжилт</th>
                        <th rowspan="3">Үйлдэл</th>
                    </tr>
                    <tr>
                        <th rowspan="2">Огноо</th>
                        <th rowspan="2">Дугаар</th>
                        <th rowspan="2">Албан шаардлагын дугаар, огноо</th>
                        <th rowspan="2">Зөрчлийн товч утга</th>
                        <th rowspan="2">Зөрчлийн ангилал</th>
                        <th rowspan="2">Зөрчил гаргасан байгууллага, албан тушаалтны нэр</th>
                        <th colspan="2">Хугацаа (он, сар, өдөр)</th>
                        <th rowspan="2">Зөрчлийн дүн</th>
                        <th colspan="4">Албан шаардлагыг хүлээн авсан</th>
                        <th colspan="2">Бүрэн хэрэгжсэн</th>
                        <th colspan="2">Хэрэгжээгүй</th>
                    </tr>
                    <tr>
                        <th>Хүлээлгэн өгсөн</th>
                        <th>Биелэлтийг тооцох</th>
                        <th>Байгууллагын нэр</th>
                        <th>Албан тушаал</th>
                        <th>Овог нэр</th>
                        <th>Холбоо барих хаяг, утас</th>
                        <th>Тоо</th>
                        <th>Дүн</th>
                        <th>Тоо</th>
                        <th>Дүн</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            bm4ListInit();
        });

        function bm4ListInit() {
            var table = $("#BM4").DataTable({
                "serverSide": true,
                "processing": true,
                "ajax": {
                    url: "/api/service/bm4list",
                    type: 'POST',
                    data: function (data) {
                        data.DeparmentID = $('#DeparmentID').val();
                        data.PeriodID = $('#PeriodID').val();
                        return data;
                    }
                },
                createdRow: function (row, data, dataIndex) {
                    $(row).attr('data-id', data.ID);
                },
                "columns": [
                    {
                        "data": null, "sortable": false, "class": 'text-center',
                        render: function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    { "data": "AUDIT_YEAR", "name": "AUDIT_YEAR" },
                    { "data": "AUDIT_TYPE", "name": "AUDIT_TYPE" },
                    { "data": "AUDIT_CODE", "name": "AUDIT_CODE" },
                    { "data": "AUDIT_NAME", "name": "AUDIT_NAME" },
                    { "data": "AUDIT_BUDGET_TYPE", "name": "AUDIT_BUDGET_TYPE" },
                    { "data": "ORDER_DATE", "name": "ORDER_DATE" },
                    { "data": "ORDER_NO", "name": "ORDER_NO" },
                    { "data": "PROPOSAL_NO", "name": "PROPOSAL_NO" },
                    { "data": "PROPOSAL_VIOLATION_DESC", "name": "PROPOSAL_VIOLATION_DESC" },
                    { "data": "VIOLATION_RESPONDENT", "name": "VIOLATION_RESPONDENT" },
                    { "data": "PROPOSAL_SUBMITTED_DATE", "name": "PROPOSAL_SUBMITTED_DATE" },
                    { "data": "PROPOSAL_DELIVERY_DATE", "name": "PROPOSAL_DELIVERY_DATE" },
                    { "data": "PROPOSAL_AMOUNT", "name": "PROPOSAL_AMOUNT" },
                    { "data": "PROPOSAL_RCV_NAME", "name": "PROPOSAL_RCV_NAME" },
                    { "data": "PROPOSAL_RCV_ROLE", "name": "PROPOSAL_RCV_ROLE" },
                    { "data": "PROPOSAL_RCV_GIVEN_NAME", "name": "PROPOSAL_RCV_GIVEN_NAME" },
                    { "data": "PROPOSAL_RCV_ADDRESS", "name": "PROPOSAL_RCV_ADDRESS" },
                    { "data": "PROPOSAL_CONTROL_AUDITOR", "name": "PROPOSAL_CONTROL_AUDITOR" },
                    { "data": "PROPOSAL_VIOLATION_TYPE", "name": "PROPOSAL_VIOLATION_TYPE" },
                    { "data": "COMPLETION_ORDER", "name": "COMPLETION_ORDER" },
                    { "data": "COMPLETION_DONE", "name": "COMPLETION_DONE" },
                    { "data": "COMPLETION_DONE_AMOUNT", "name": "COMPLETION_DONE_AMOUNT" },
                    { "data": "COMPLETION_PROGRESS", "name": "COMPLETION_PROGRESS" },
                    { "data": "COMPLETION_PROGRESS_AMOUNT", "name": "COMPLETION_PROGRESS_AMOUNT" },
                    {
                        "data": null, "sortable": false, "class": 'text-center',
                        render: function (data, type, row, meta) {
                            var tmp = '<div class="btn-group">';
                            var urledit = '<a href="#" class="btn btn-sm" onclick="BM4.edit(' + data.ID + ')"><i class="fa fa-edit"></i></a>';
                            var urldelete = '<a href="#" class="btn btn-sm" onclick="BM4.delete(' + data.ID + ')"><i class="fa fa-trash-alt" ></i></a>';
                            tmp += urledit;
                            tmp += urldelete;
                            tmp += "</div>";
                            return tmp;
                        }
                    }
                ],
                "destroy": true,
                "scrollCollapse": true,
                "paging": true,
                "lengthMenu": [[10, 25, 50], [10, 25, 50]],
                "filter": true,
                "info": true,
                "stateSave": false,
                "bAutoWidth": false,
                lengthChange: true,
                "language": datatables.language
            });

        }
        $('#DeparmentID').change(function () {
            bm4ListInit();
        });
        $('#PeriodID').change(function () {
            bm4ListInit();
        });
        var BM4 = {
        bm4ID: null,
        display: function (data) {
            $("div#bm4modalcontainer").remove();
            $('<div/>', { id: "bm4modalcontainer" }).appendTo('body').append(data);

            $("#Bm4Modal").modal({ show: true });
        },
        loadTemplate: function () {
            $.ajax({
                    url: "@Url.Action("BM4AddEdit", "Statistic", new { Area = "" })",
                    type: 'GET',
                    success: function (data) {
                        BM4.display(data);
                    },
                    error: errorResponse,
                    beforeSend: function () {
                        Modal.show();
                    },
                    complete: function () {
                        Modal.hide();
                    }
                });
        },
        edit: function (id) {
            $.ajax({
                url: "@Url.Action("BM4Detail", "Statistic", new { Area = "" })",
                type: 'POST',
                data: { id },
                success: function (data, status, xhr) {
                    BM4.progressResponse(data, status, xhr);
                },
                error: errorResponse,
                beforeSend: function () {
                    Modal.show();
                },
                complete: function () {
                    Modal.hide();
                }
            });
        },
        delete: function (id) {
            BM4.bm4ID = id;
            var r = confirm("Устгах уу!");
            if (r) {
                $.ajax({
                    url: "@Url.Action("BM4Delete", "Statistic", new { Area = "" })",
                    type: 'POST',
                    data: { id },
                    success: function (data, status, xhr) {
                        BM4.progressResponse(data, status, xhr);
                    },
                    error: errorResponse,
                    beforeSend: function () {
                        Modal.show();
                    },
                    complete: function () {
                        Modal.hide();
                    }
                });
            }
        },
        close: function () {
            $("#Bm4Modal").modal("hide");
        },
        progressResponse: function (data, status, xhr) {
            var ct = xhr.getResponseHeader("content-type") || "";
            if (ct.indexOf("html") > -1) {
                BM4.display(data);
            }
            if (ct.indexOf('json') > -1) {
                if (data.error) {
                    Message.error(data.message);
                } else {
                    $('.modal-backdrop:first').remove()
                    BM4.close();
                    bm4ListInit();
                    Message.success(data.message);
                }
            }
        }
    }
        function exportFile(tableid, excelname,) {
            $('#exportXLSX').prop('disabled', true);
            table.destroy();
            bm4sListInit(-1);

            setTimeout(function () {
                var wb = XLSX.utils.table_to_book(document.getElementById(tableid));
                XLSX.writeFile(wb, excelname + '.xlsx');

                table.destroy();
                bm4ListInit();
                $('#exportXLSX').prop('disabled', false);
            }, 5000
            )
        }
    </script>
}
