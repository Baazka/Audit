@model System.Xml.Linq.XElement
@{
    ViewBag.Title = "BM6";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int counter = 0;
}

<div class="d-flex">
    <a href="@Url.Action("Index","Statistic")" class="btn btn-sm btn-light mr-2">
        <span class="icon text-gray-600">
            <i class="fas fa-arrow-left"></i>
        </span>
    </a>
    <h4>БМ-6. Төрийн аудитын газрын тайлант хугацаанд аудитаар илрүүлсэн алдаа, зөрчлийн шийдвэрлэлтийн бүртгэл</h4>
    <div class="ml-auto pr-2">
        <a href="#" class="btn btn-sm btn-success btn-icon-split" onclick="exportFile('BM6', 'БМ-6. Төрийн аудитын газрын тайлант хугацаанд аудитаар илрүүлсэн алдаа, зөрчлийн шийдвэрлэлтийн бүртгэл')">
            <span class="icon text-white-50">
                <i class="fas fa-file-excel"></i>
            </span>
            <span class="text">Excel</span>
        </a>
    </div>
</div>
<hr class="sidebar-divider">
<div class="table-responsive">
    <table id="BM6" class="table table-bordered datatable display" style="width:100%">
        <thead>
            <tr>
                <th rowspan="3" class="text-center">№</th>
                <th rowspan="3">Төрийн аудитын газар</th>
                <th rowspan="3">Аудитын төрөл</th>
                <th rowspan="3">Аудитын жил</th>
                <th rowspan="3">Аудитын код</th>
                <th rowspan="3">Аудитын нэр</th>
                <th colspan="6">Илрүүлэлт</th>
                <th colspan="2" rowspan="2">Залруулсан алдаа</th>
                <th colspan="2" rowspan="2">Залруулагдаагүй алдаа, зөрчлийн дүн</th>
                <th colspan="12">Залруулагдаагүй алдаа, зөрчлийн дүн</th>
            </tr>
            <tr>
                <th colspan="2">Зөрчил</th>
                <th colspan="2">Алдаа</th>
                <th colspan="2">Бүгд</th>
                <th colspan="2">Тогтоосон төлбөрийн акт</th>
                <th colspan="2">Өгсөн албан шаардлага</th>
                <th colspan="2">Өгсөн зөвлөмж</th>
                <th colspan="2">Албан тушаалтанд хариуцлага тооцуулах санал</th>
                <th colspan="2">Хууль хяналтын байгууллагад шилжүүлсэн асуудал</th>
                <th colspan="2">Бусад</th>
            </tr>
            <tr>
                <th>Тоо</th>
                <th>Дүн</th>
                <th>Тоо</th>
                <th>Дүн</th>
                <th>Тоо</th>
                <th>Дүн</th>
                <th>Тоо</th>
                <th>Дүн</th>
                <th>Тоо</th>
                <th>Дүн</th>
                <th>Дүн</th>
                <th>Тоо</th>
                <th>Дүн</th>
                <th>Тоо</th>
                <th>Дүн</th>
                <th>Тоо</th>
                <th>Дүн</th>
                <th>Дүн</th>
                <th>Тоо</th>
                <th>Дүн</th>
                <th>Тоо</th>
                <th>Дүн</th>
            </tr>
        </thead>
        <tbody>
                @if (Model !=null && Model.Elements("BM6").Count() != 0)
                {
                    foreach (var item in Model.Elements("BM6"))
                    {
                        counter++;
                        <tr>
                            <td>@counter</td>
                            <td>@(item.Element("OFFICE_ID") != null ? item.Element("OFFICE_ID").Value:"")</td>
                            <td>@(item.Element("AUDIT_TYPE") != null ? item.Element("AUDIT_TYPE").Value:"")</td>
                            <td>@(item.Element("AUDIT_YEAR") != null ? item.Element("AUDIT_YEAR").Value:"")</td>
                            <td>@(item.Element("AUDIT_CODE") != null ? item.Element("AUDIT_CODE").Value:"")</td>
                            <td>@(item.Element("AUDIT_NAME") != null ? item.Element("AUDIT_NAME").Value:"")</td>
                            <td>@(item.Element("VIOLATION_COUNT") != null ? item.Element("VIOLATION_COUNT").Value:"")</td>
                            <td>@(item.Element("VIOLATION_AMOUNT") != null ? item.Element("VIOLATION_AMOUNT").Value:"")</td>
                            <td>@(item.Element("ERROR_COUNT") != null ? item.Element("ERROR_COUNT").Value:"")</td>
                            <td>@(item.Element("ERROR_AMOUNT") != null ? item.Element("ERROR_AMOUNT").Value:"")</td>
                            <td>@(item.Element("ALL_COUNT") != null ? item.Element("ALL_COUNT").Value:"")</td>
                            <td>@(item.Element("ALL_AMOUNT") != null ? item.Element("ALL_AMOUNT").Value:"")</td>
                            <td>@(item.Element("CORRECTED_ERROR_COUNT") != null ? item.Element("CORRECTED_ERROR_COUNT").Value:"")</td>
                            <td>@(item.Element("CORRECTED_ERROR_AMOUNT") != null ? item.Element("CORRECTED_ERROR_AMOUNT").Value:"")</td>
                            <td>@(item.Element("OTHER_ERROR_COUNT") != null ? item.Element("OTHER_ERROR_COUNT").Value:"")</td>
                            <td>@(item.Element("OTHER_ERROR_AMOUNT") != null ? item.Element("OTHER_ERROR_AMOUNT").Value:"")</td>
                            <td>@(item.Element("ACT_COUNT") != null ? item.Element("ACT_COUNT").Value:"")</td>
                            <td>@(item.Element("ACT_AMOUNT") != null ? item.Element("ACT_AMOUNT").Value:"")</td>
                            <td>@(item.Element("CLAIM_COUNT") != null ? item.Element("CLAIM_COUNT").Value:"")</td>
                            <td>@(item.Element("CLAIM_AMOUNT") != null ? item.Element("CLAIM_AMOUNT").Value:"")</td>
                            <td>@(item.Element("REFERENCE_COUNT") != null ? item.Element("REFERENCE_COUNT").Value:"")</td>
                            <td>@(item.Element("REFERENCE_AMOUNT") != null ? item.Element("REFERENCE_AMOUNT").Value:"")</td>
                            <td>@(item.Element("PROPOSAL_COUNT") != null ? item.Element("PROPOSAL_COUNT").Value:"")</td>
                            <td>@(item.Element("PROPOSAL_AMOUNT") != null ? item.Element("PROPOSAL_AMOUNT").Value:"")</td>
                            <td>@(item.Element("LAW_COUNT") != null ? item.Element("LAW_COUNT").Value:"")</td>
                            <td>@(item.Element("LAW_AMOUNT") != null ? item.Element("LAW_AMOUNT").Value:"")</td>
                            <td>@(item.Element("OTHER_COUNT") != null ? item.Element("OTHER_COUNT").Value:"")</td>
                            <td>@(item.Element("OTHER_AMOUNT") != null ? item.Element("OTHER_AMOUNT").Value:"")</td>
                        </tr>
                    }
                }
            </tbody>
    </table>
</div>

@section scripts{
    <script>
        initDataTable();
    </script>
} 