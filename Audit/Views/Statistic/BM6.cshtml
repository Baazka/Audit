@section scripts{
    <script>
        $(document).ready(function () {
            bm6ListInit();
        });

        function bm6ListInit() {
            var table = $("#BM6").DataTable({
                "serverSide": true,
                "processing": true,
                "ajax": {
                    url: "/api/service/bm6list",
                    type: 'POST',
                    data: function (data) {
                        data.DeparmentID = $('#DeparmentID').val();
                        data.PeriodID = $('#PeriodID').val();
                        return data;
                    }
                },
                createdRow: function (row, data, dataIndex) {
                    $(row).attr('data-id', data.ID);
                },
                "columns": [
                    {
                        "data": null, "sortable": false, "class": 'text-center',
                        render: function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    { "data": null, "name": null },
                    { "data": "AUDIT_YEAR", "name": "AUDIT_YEAR" },
                    { "data": "AUDIT_TYPE", "name": "AUDIT_TYPE" },
                    { "data": "AUDIT_CODE", "name": "AUDIT_CODE" },
                    { "data": "AUDIT_NAME", "name": "AUDIT_NAME" },
                    { "data": "VIOLATION_COUNT", "name": "VIOLATION_COUNT" },
                    { "data": "VIOLATION_AMOUNT", "name": "VIOLATION_AMOUNT" },
                    { "data": "ERROR_COUNT", "name": "ERROR_COUNT" },
                    { "data": "ERROR_AMOUNT", "name": "ERROR_AMOUNT" },
                    { "data": "ALL_COUNT", "name": "ALL_COUNT" },
                    { "data": "ALL_AMOUNT", "name": "ALL_AMOUNT" },
                    { "data": "CORRECTED_ERROR_COUNT", "name": "CORRECTED_ERROR_COUNT" },
                    { "data": "CORRECTED_ERROR_AMOUNT", "name": "CORRECTED_ERROR_AMOUNT" },
                    { "data": "OTHER_ERROR_COUNT", "name": "OTHER_ERROR_COUNT" },
                    { "data": "OTHER_ERROR_AMOUNT", "name": "OTHER_ERROR_AMOUNT" },
                    { "data": "ACT_COUNT", "name": "ACT_COUNT" },
                    { "data": "ACT_AMOUNT", "name": "ACT_AMOUNT" },
                    { "data": "CLAIM_COUNT", "name": "CLAIM_COUNT" },
                    { "data": "CLAIM_AMOUNT", "name": "CLAIM_AMOUNT" },
                    { "data": "REFERENCE_COUNT", "name": "REFERENCE_COUNT" },
                    { "data": "REFERENCE_AMOUNT", "name": "REFERENCE_AMOUNT" },
                    { "data": "PROPOSAL_COUNT", "name": "PROPOSAL_COUNT" },
                    { "data": "PROPOSAL_AMOUNT", "name": "PROPOSAL_AMOUNT" },
                    { "data": "LAW_COUNT", "name": "LAW_COUNT" },
                    { "data": "LAW_AMOUNT", "name": "LAW_AMOUNT" },
                    { "data": "OTHER_COUNT", "name": "OTHER_COUNT" },
                    { "data": "OTHER_AMOUNT", "name": "OTHER_AMOUNT" },
                    {
                        "data": null, "sortable": false, "class": 'text-center',
                        render: function (data, type, row, meta) {
                            var tmp = '<div class="btn-group">';
                            var urledit = '<a href="#" class="btn btn-sm" onclick="BM6.edit(' + data.ID + ')"><i class="fa fa-edit"></i></a>';
                            var urldelete = '<a href="#" class="btn btn-sm" onclick="BM6.delete(' + data.ID + ')"><i class="fa fa-trash-alt" ></i></a>';
                            tmp += urledit;
                            tmp += urldelete;
                            tmp += "</div>";
                            return tmp;
                        }
                    }
                ],
                "destroy": true,
                "scrollCollapse": true,
                "paging": true,
                "lengthMenu": [[10, 25, 50], [10, 25, 50]],
                "filter": true,
                "info": true,
                "stateSave": false,
                "bAutoWidth": false,
                lengthChange: true,
                "language": datatables.language
            });

        }
        $('#DeparmentID').change(function () {
            bm6ListInit();
        });
        $('#PeriodID').change(function () {
            bm6ListInit();
        });
        var BM6 = {
        bm6ID: null,
        display: function (data) {
            $("div#bm6modalcontainer").remove();
            $('<div/>', { id: "bm6modalcontainer" }).appendTo('body').append(data);

            $("#Bm6Modal").modal({ show: true });
        },
        loadTemplate: function () {
            $.ajax({
                    url: "@Url.Action("BM6AddEdit", "Statistic", new { Area = "" })",
                    type: 'GET',
                    success: function (data) {
                        BM6.display(data);
                    },
                    error: errorResponse,
                    beforeSend: function () {
                        Modal.show();
                    },
                    complete: function () {
                        Modal.hide();
                    }
                });
        },
        edit: function (id) {
            $.ajax({
                url: "@Url.Action("BM6Detail", "Statistic", new { Area = "" })",
                type: 'POST',
                data: { id },
                success: function (data, status, xhr) {
                    BM6.progressResponse(data, status, xhr);
                },
                error: errorResponse,
                beforeSend: function () {
                    Modal.show();
                },
                complete: function () {
                    Modal.hide();
                }
            });
        },
        delete: function (id) {
            BM6.bm6ID = id;
            var r = confirm("Устгах уу!");
            if (r) {
                $.ajax({
                    url: "@Url.Action("BM6Delete", "Statistic", new { Area = "" })",
                    type: 'POST',
                    data: { id },
                    success: function (data, status, xhr) {
                        BM6.progressResponse(data, status, xhr);
                    },
                    error: errorResponse,
                    beforeSend: function () {
                        Modal.show();
                    },
                    complete: function () {
                        Modal.hide();
                    }
                });
            }
        },
        close: function () {
            $("#Bm6Modal").modal("hide");
        },
        progressResponse: function (data, status, xhr) {
            var ct = xhr.getResponseHeader("content-type") || "";
            if (ct.indexOf("html") > -1) {
                BM6.display(data);
            }
            if (ct.indexOf('json') > -1) {
                if (data.error) {
                    Message.error(data.message);
                } else {
                    $('.modal-backdrop:first').remove()
                    BM6.close();
                    bm6ListInit();
                    Message.success(data.message);
                }
            }
        }
    }
        function exportFile(tableid, excelname,) {
            $('#exportXLSX').prop('disabled', true);
            table.destroy();
            bm6ListInit(-1);

            setTimeout(function () {
                var wb = XLSX.utils.table_to_book(document.getElementById(tableid));
                XLSX.writeFile(wb, excelname + '.xlsx');

                table.destroy();
                bm6ListInit();
                $('#exportXLSX').prop('disabled', false);
            }, 5000
            )
        }
    </script>
}