@section scripts{
    <script>
        $(document).ready(function () {
            
            setTimeout(function () { cm3aListInit(); }, 1000);
        });

        function cm3aListInit(pagelength = -1) {
            var count = 0;
            CM3A.table = $("#CM3A").DataTable({
                "serverSide": true,
                "processing": true,
                "ajax": {
                    url: "/api/service/cm3list",
                    type: 'POST',
                    data: function (data) {
                        data.DeparmentID = $('#DeparmentID').val();
                        data.PeriodID = $('#PeriodID').val();
                        data.Type = 1;
                        count = 0;
                        return data;
                    }
                },
                createdRow: function (row, data, dataIndex) {
                    $(row).attr('data-id', data.ID);
                },
                "columns": [
                    { "data": "DEPARTMENT_NAME", "name": "DEPARTMENT_NAME" },
                    {
                        "data": null, "sortable": false, "class": 'text-center',
                        render: function (data, type, row, meta) {
                            if (data.DEPARTMENT_NAME === "Нийт дүн") {
                                return "";
                            }
                            if (data.BUDGET_TYPE_NAME === "Дүн") {
                                count = 0;
                                return "";
                            }
                            if (data.BUDGET_TYPE_NAME === "Нэг. Төрийн аудитын байгууллага") {
                           
                                return "";
                            }
                            if (data.BUDGET_TYPE_NAME === "Хоёр. Хараат бус аудитын компани") {
                                
                                return "";
                            }
                            else {
                                //return meta.row + meta.settings._iDisplayStart + 1;
                                return count = count + 1;
                            }
                            
                        }
                    },
                    
                    { "data": "BUDGET_TYPE_NAME", "name": "BUDGET_TYPE_NAME" },
                    { "data": "C1_COUNT", "name": "C1_COUNT", "class": "text-right",},
                    { "data": "C1_AMOUNT", "name": "C1_AMOUNT", "class": "text-right",},
                    { "data": "CURRENT_COUNT", "name": "CURRENT_COUNT", "class": "text-right",},
                    { "data": "CURRENT_AMOUNT", "name": "CURRENT_AMOUNT", "class": "text-right",},
                    { "data": "TOTAL_COUNT", "name": "TOTAL_COUNT", "class": "text-right",},
                    { "data": "TOTAL_AMOUNT", "name": "TOTAL_AMOUNT", "class": "text-right",},
                    { "data": "COMPLETION_DONE_COUNT", "name": "COMPLETION_DONE_COUNT", "class": "text-right",},
                    { "data": "COMPLETION_DONE_AMOUNT", "name": "COMPLETION_DONE_AMOUNT", "class": "text-right",},
                    { "data": "COMPLETION_PROGRESS_COUNT", "name": "COMPLETION_PROGRESS_COUNT", "class": "text-right",},
                    { "data": "COMPLETION_PROGRESS_AMOUNT", "name": "COMPLETION_PROGRESS_AMOUNT", "class": "text-right",},
                    { "data": "LAW_COUNT", "name": "LAW_COUNT", "class": "text-right",},
                    { "data": "LAW_AMOUNT", "name": "LAW_AMOUNT", "class": "text-right",},
                    { "data": "LAW_CURRENT_COUNT", "name": "LAW_CURRENT_COUNT", "class": "text-right",},
                    { "data": "LAW_CURRENT_AMOUNT", "name": "LAW_CURRENT_AMOUNT", "class": "text-right",},
                    { "data": "LAW_TOTAL_COUNT", "name": "LAW_TOTAL_COUNT", "class": "text-right",},
                    { "data": "LAW_TOTAL_AMOUNT", "name": "LAW_TOTAL_AMOUNT", "class": "text-right",},
                    { "data": "LAW_COMP_DONE_COUNT", "name": "LAW_COMP_DONE_COUNT", "class": "text-right",},
                    { "data": "LAW_COMP_DONE_AMOUNT", "name": "LAW_COMP_DONE_AMOUNT", "class": "text-right",},
                    { "data": "LAW_COMP_PROG_COUNT", "name": "LAW_COMP_PROG_COUNT", "class": "text-right",},
                    { "data": "LAW_COMP_PROG_AMOUNT", "name": "LAW_COMP_PROG_AMOUNT", "class": "text-right",},
                    { "data": "LAW_COMP_INVALID_COUNT", "name": "LAW_COMP_INVALID_COUNT", "class": "text-right",},
                    { "data": "LAW_COMP_INVALID_AMOUNT", "name": "LAW_COMP_INVALID_AMOUNT", "class": "text-right",},
                    { "data": "C2_COUNT", "name": "C2_COUNT", "class": "text-right",},
                    { "data": "C2_AMOUNT", "name": "C2_AMOUNT", "class": "text-right",},
                ],
                "destroy": true,
                "scrollCollapse": true,
                "paging": true,
                "pageLength": pagelength,
                "lengthMenu": [[10, 25, 50], [10, 25, 50]],
                "filter": true,
                "info": true,
                "stateSave": false,
                "bAutoWidth": false,
                lengthChange: true,
                "language": datatables.language,
                "createdRow": function (row, data, index) { 
                    if (data !== undefined) {
                        if (data.BUDGET_TYPE_NAME === "Дүн" ) {
                            $(row).children('td').each((index, td) => {
                                if (index === 2)
                                    $('td', row).eq(2).addClass('font-weight-bold');

                                if (index !== 27 && index !== 0)
                                    $('td', row).eq(index).addClass('tableBackroundDun');
                            });
                        }
                        if (data.DEPARTMENT_NAME === "Нийт дүн") {
                            $(row).children('td').each((index, td) => {
                                if (index === 0)
                                    $('td', row).eq(0).addClass('font-weight-bold');

                                if (index !== 27)
                                    $('td', row).eq(index).addClass('tableBackround');
                            });
                        }
                        if (data.BUDGET_TYPE_NAME === "Нэг. Төрийн аудитын байгууллага" || data.BUDGET_TYPE_NAME === "Хоёр. Хараат бус аудитын компани") {
                            $(row).children('td').each((index, td) => {
                                if (index === 2)
                                    $('td', row).eq(2).addClass('font-weight-bold');
                              
                                if (index === 2)
                                    $('td', row).eq(index).attr("colspan", 4);


                                if (index === 22)
                                    $('td', row).eq(22).remove();
                                if (index === 23)
                                    $('td', row).eq(23).remove();
                                if (index === 24)
                                    $('td', row).eq(24).remove();
                                if (index === 25)
                                    $('td', row).eq(25).remove();


                                if (index !== 26 && index !== 0)
                                    $('td', row).eq(index).attr('id', "tableBorder");

                                if (index !== 27 && index !== 0)
                                    $('td', row).eq(index).addClass('tableBackround');
                               
                            });
                        }
                      
                    }
                },

                "drawCallback": function (settings) {
                    var api = this.api();
                    var rows = api.rows({ page: 'current' }).nodes();


        
                   
                  

                    idx = 0

                    last = null;
                    tr = null;
                    ltd = null;
                    api.column(idx, { page: 'current' }).data().each(function (group, i) {
                        tr = $(rows[i]);
                        var td = $("td:eq(" + idx + ")", tr);

                        if (last !== group) {

                            td.attr("rowspan", 1);

                            td.text(group);
                            ltd = td;
                            last = group;
                            td.css("vertical-align", "middle");
                            idx = 0;
                        }
                        else {
                            ltd.attr("rowspan", parseInt(ltd.attr("rowspan")) + 1);
                            td.remove();

                            if (parseInt(ltd.attr("rowspan")) === 5) {
                                idx = 0;
                            }

                        }

                    });

                },
            
            });

        }
        $('#DeparmentID').change(function () {
            cm3aListInit();
        });
        $('#PeriodID').change(function () {
            cm3aListInit();
        });
        var CM3A = {
            cm3aID: null,
            table: null,
        display: function (data) {
            $("div#cm3amodalcontainer").remove();
            $('<div/>', { id: "cm3amodalcontainer" }).appendTo('body').append(data);

            $("#CM3AModal").modal({ show: true });
        },
        loadTemplate: function () {
            $.ajax({
                    url: "@Url.Action("CM3AAddEdit", "Statistic", new { Area = "" })",
                    type: 'GET',
                success: function (data) {
                    CM3A.display(data);
                    },
                    error: errorResponse,
                    beforeSend: function () {
                        Modal.show();
                    },
                    complete: function () {
                        Modal.hide();
                    }
                });
        },
        edit: function (id) {
            $.ajax({
                url: "@Url.Action("CM3ADetail", "Statistic", new { Area = "" })",
                type: 'POST',
                data: { id },
                success: function (data, status, xhr) {
                    CM3A.progressResponse(data, status, xhr);
                },
                error: errorResponse,
                beforeSend: function () {
                    Modal.show();
                },
                complete: function () {
                    Modal.hide();
                }
            });
        },
        delete: function (id) {
            CM3A.cm3aID = id;
            var r = confirm("Устгах уу!");
            if (r) {
                $.ajax({
                    url: "@Url.Action("CM3ADelete", "Statistic", new { Area = "" })",
                    type: 'POST',
                    data: { id },
                    success: function (data, status, xhr) {
                        CM3A.progressResponse(data, status, xhr);
                    },
                    error: errorResponse,
                    beforeSend: function () {
                        Modal.show();
                    },
                    complete: function () {
                        Modal.hide();
                    }
                });
            }
        },
        close: function () {
            $("#CM3AModal").modal("hide");
        },
        progressResponse: function (data, status, xhr) {
            var ct = xhr.getResponseHeader("content-type") || "";
            if (ct.indexOf("html") > -1) {
                CM3A.display(data);
            }
            if (ct.indexOf('json') > -1) {
                if (data.error) {
                    Message.error(data.message);
                } else {
                    $('.modal-backdrop:first').remove()
                    CM3A.close();
                    cm3aListInit();
                    Message.success(data.message);
                }
            }
        }
    }
        function exportFile(tableid, excelname,) {
            $('#exportXLSX').addClass('disabled');
            CM3A.table.destroy();
            cm3aListInit(-1);

            setTimeout(function () {
                var wb = XLSX.utils.table_to_book(document.getElementById(tableid));
                XLSX.writeFile(wb, excelname + '.xlsx');

                CM3A.table.destroy();
                cm3aListInit();
                $('#exportXLSX').removeClass('disabled');
            }, 5000
            )
        }
    </script>
}