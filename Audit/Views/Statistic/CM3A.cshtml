@using Audit.Models
@model Audit.Models.CM3VM
@{
    ViewBag.Title = "CM3A";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-flex">
    <a href="@Url.Action("Index","Statistic")?type=3" class="btn btn-sm btn-light mr-2">
        <span class="icon text-gray-600">
            <i class="fas fa-arrow-left"></i>
        </span>
    </a>
    <h4>СМ-3А. Санхүүгийн тайлангийн аудитаар илрүүлсэн алдаа, зөрчлийн хэрэгжилт</h4>
</div>
<style>

    #tableBorder {
        border-right-color: transparent !important;
    }
    .tableBackround {
        background-color: #8080804a !important;
    }
    .tableBackroundDun {
        background-color: #17a2b81f !important;
