@model Audit.Models.CM6

<div class="modal fade" id="CM6Modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document" style="max-width:90%;margin: 0 auto;">
        @using (Ajax.BeginForm("CM6AddEdit", "Statistic", new { Area = "" },
                   new AjaxOptions
                   {
                       UpdateTargetId = "cm6modalcontainer",
                       OnBegin = "Modal.show()",
                       OnComplete = "Modal.hide(); $('#CM6Modal').modal({ show: true }); $('.modal-backdrop:first').remove()",
                       OnSuccess = "CM6.progressResponse(data, status, xhr)",
                       OnFailure = "errorResponse",
                       HttpMethod = "Post",
                       InsertionMode = InsertionMode.Replace
                   },
                   new { @class = "form-horizontal", @autocomplete = "off" }))
        {
            <div class="modal-content">
                <div class="modal-header">
                    <h6 class="modal-title" id="exampleModalLabel">CM6 бүртгэл</h6>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true" style="color:#fff;">x</span></button>
                </div>
                <div class="modal-body">
                    <fieldset>
                        <div class="hidden text-danger error-msgs">
                            <ul></ul>
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(m => m.ID)
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group row">
                                    <label class="col-sm-4 col-form-label">Төрийн аудитын байгууллага:</label>
                                    <div class="col-sm-8">
                                        @Html.DropDownListFor(model => model.OFFICE_ID, Model.departments.Select(m => new SelectListItem { Text = m.DEPARTMENT_NAME, Value = m.DEPARTMENT_ID.ToString() }).ToList(), "Сонгоно уу", htmlAttributes: new { @class = "form-control form-control-sm" })
                                        @Html.ValidationMessageFor(m => m.OFFICE_ID, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group row">
                                    <label class="col-sm-4 col-form-label">Он:</label>
                                    <div class="col-sm-8">
                                        @Html.DropDownListFor(model => model.STATISTIC_PERIOD, Model.periods.Select(m => new SelectListItem { Text = m.PERIOD_LABEL, Value = m.ID.ToString() }).ToList(), null, htmlAttributes: new { @class = "form-control form-control-sm" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group row">
                                    <label class="col-sm-4 col-form-label">Төсөв:</label>
                                    <div class="col-sm-8">
                                        @Html.EditorFor(m => m.AUD_NAME, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                        @Html.ValidationMessageFor(m => m.AUD_NAME, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group row">
                                    <label class="col-sm-4 col-form-label">Үзүүлэлт:</label>
                                    <div class="col-sm-8">
                                        @Html.EditorFor(m => m.IS_STATE, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                        @Html.ValidationMessageFor(m => m.IS_STATE, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <table class="table table-bordered datatable">
                            <thead>
                                <tr>
                                    <th colspan="6">Боловсруулсан санал</th>
                                </tr>
                                <tr>
                                    <th colspan="2">Бүгд</th>
                                    <th colspan="4">Үүнээс</th>
                                </tr>
                                <tr>
                                    <th rowspan="2">Тоо</th>
                                    <th rowspan="2">Дүн</th>
                                    <th colspan="2">Орлого нэмэгдүүлэх</th>
                                    <th colspan="2">Зардал хорогдуулах</th>
                                </tr>
                                <tr>
                                    <th>Тоо</th>
                                    <th>Дүн</th>
                                    <th>Тоо</th>
                                    <th>Дүн</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        @Html.EditorFor(m => m.ALL_COUNT, new { htmlAttributes = new { @class = "form-control form-control-sm text-right" } })
                                        @Html.ValidationMessageFor(m => m.ALL_COUNT, "", new { @class = "text-danger" })
                                    </td>
                                    <td class="text-right">
                                        @Html.EditorFor(m => m.ALL_AMOUNT, new { htmlAttributes = new { @class = "form-control form-control-sm text-right" } })
                                        @Html.ValidationMessageFor(m => m.ALL_AMOUNT, "", new { @class = "text-danger" })
                                    </td>
                                    <td class="text-right">
                                        @Html.EditorFor(m => m.PROCESSED_INCOMED_COUNT, new { htmlAttributes = new { @class = "form-control form-control-sm text-right" } })
                                        @Html.ValidationMessageFor(m => m.PROCESSED_INCOMED_COUNT, "", new { @class = "text-danger" })
                                    </td>
                                    <td>
                                        @Html.EditorFor(m => m.PROCESSED_INCOMED_AMOUNT, new { htmlAttributes = new { @class = "form-control form-control-sm text-right" } })
                                        @Html.ValidationMessageFor(m => m.PROCESSED_INCOMED_AMOUNT, "", new { @class = "text-danger" })
                                    </td>
                                    <td>
                                        @Html.EditorFor(m => m.PROCESSED_COSTS_COUNT, new { htmlAttributes = new { @class = "form-control form-control-sm text-right" } })
                                        @Html.ValidationMessageFor(m => m.PROCESSED_COSTS_COUNT, "", new { @class = "text-danger" })
                                    </td>
                                    <td>
                                        @Html.EditorFor(m => m.PROCESSED_COSTS_AMOUNT, new { htmlAttributes = new { @class = "form-control form-control-sm text-right" } })
                                        @Html.ValidationMessageFor(m => m.PROCESSED_COSTS_AMOUNT, "", new { @class = "text-danger" })
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <table class="table table-bordered datatable">
                            <thead>
                                <tr>
                                    <th colspan="6">Хүлээн зөвшөөрөгдсөн санал</th>
                                </tr>
                                <tr>
                                    <th colspan="2">Бүгд</th>
                                    <th colspan="4">Үүнээс</th>
                                </tr>
                                <tr>
                                    <th rowspan="2">Тоо</th>
                                    <th rowspan="2">Дүн</th>
                                    <th colspan="2">Орлого нэмэгдүүлэх</th>
                                    <th colspan="2">Зардал хорогдуулах</th>
                                </tr>
                                <tr>
                                    <th>Тоо</th>
                                    <th>Дүн</th>
                                    <th>Тоо</th>
                                    <th>Дүн</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        @Html.EditorFor(m => m.ALL_C1_COUNT, new { htmlAttributes = new { @class = "form-control form-control-sm text-right" } })
                                        @Html.ValidationMessageFor(m => m.ALL_C1_COUNT, "", new { @class = "text-danger" })
                                    </td>
                                    <td>
                                        @Html.EditorFor(m => m.ALL_C2_AMOUNT, new { htmlAttributes = new { @class = "form-control form-control-sm text-right" } })
                                        @Html.ValidationMessageFor(m => m.ALL_C2_AMOUNT, "", new { @class = "text-danger" })
                                    </td>
                                    <td>
                                        @Html.EditorFor(m => m.ACCEPTED_INCOMED_COUNT, new { htmlAttributes = new { @class = "form-control form-control-sm text-right" } })
                                        @Html.ValidationMessageFor(m => m.ACCEPTED_INCOMED_COUNT, "", new { @class = "text-danger" })
                                    </td>
                                    <td>
                                        @Html.EditorFor(m => m.ACCEPTED_INCOMED_AMOUNT, new { htmlAttributes = new { @class = "form-control form-control-sm text-right" } })
                                        @Html.ValidationMessageFor(m => m.ACCEPTED_INCOMED_AMOUNT, "", new { @class = "text-danger" })
                                    </td>
                                    <td>
                                        @Html.EditorFor(m => m.ACCEPTED_COSTS_COUNT, new { htmlAttributes = new { @class = "form-control form-control-sm text-right" } })
                                        @Html.ValidationMessageFor(m => m.ACCEPTED_COSTS_COUNT, "", new { @class = "text-danger" })
                                    </td>
                                    <td>
                                        @Html.EditorFor(m => m.ACCEPTED_COSTS_AMOUNT, new { htmlAttributes = new { @class = "form-control form-control-sm text-right" } })
                                        @Html.ValidationMessageFor(m => m.ACCEPTED_COSTS_AMOUNT, "", new { @class = "text-danger" })
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <hr />
                        <div style="text-align: right">
                            <button type="submit" class="btn btn-sm" style="background-color:#233772; color:#fff;">Хадгалах</button>
                            <button type="button" class="btn btn-sm btn-default bg-secondary text-white" data-dismiss="modal">Хаах</button>
                        </div>
                    </fieldset>
                </div>
            </div>
        }
    </div>
</div>
<script>
  $( function() {
      $(".datepicker").datepicker({
          beforeShow: function () {
              setTimeout(function () {
                  $('.ui-datepicker').css('z-index', 99999999999999);
              }, 0);
          },
          changeMonth: true,
          changeYear: true,
          dateFormat: "yy/mm/dd",
          firstDay: 1,
          dayNamesMin: ["Ня", "Да", "Мя", "Лха", "Пү", "Ба", "Бя"],
          monthNamesShort: ["1-сар", "2-сар", "3-сар", "4-сар", "5-сар", "6-сар", "7-сар", "8-сар", "9-сар", "10-сар", "11-сар", "12-сар"],
          maxDate: "+0D",
          showOn: "button",
          buttonImage: "@Url.Content("~/Images/calendar.png")",
          buttonImageOnly: true,
          buttonText: "Select date"
      });
  });
</script>