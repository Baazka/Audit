@model List<Audit.Models.OrgList>
    @{ 
        int counter = 0;
        Layout = null;
    }

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered datatable display" id="organizationlist" style="width:100%">
                <thead>
                    <tr style="background-color:#D2D3D5;">
                        <th class="text-center">№</th>
                        <th>Алба</th>
                        <th>Регистр</th>
                        <th>Нэр</th>
                        <th>Код</th>
                        <th>Төсөв захирагч</th>
                        <th>Дээд шатны төсөв захирагч</th>
                        <th>Алдаа</th>
                        <th>Төлөв</th>
                        <th>Сануулга</th>
                        <th>Үйлдэл</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count != 0)
                    {
                        foreach (var item in Model)
                        {
                            counter++;
                    <tr data-id="@item.ORG_ID">
                        <td>@counter</td>
                        <td>@item.DEPARTMENT_NAME</td>
                        <td>@item.ORG_REGISTER_NO</td>
                        <td>@item.ORG_NAME</td>
                        <td>@item.ORG_CODE</td>
                        <td>@item.BUDGET_TYPE_NAME</td>
                        <td>@item.ORG_CONCENTRATOR_NAME</td>
                        <td>@item.VIOLATION_DETAIL</td>
                        <td>@item.STATUS_NAME</td>
                        <td>@item.INFORMATION_DETAIL</td>
                        <td class="text-center">
                            <a class="btn btn-warning btn-sm" href="#" onclick="Organization.edit(@item.ORG_ID)">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a class="btn btn-danger btn-sm" href="#" onclick="Organization.delete(@item.ORG_ID)">
                                <i class="fa fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>